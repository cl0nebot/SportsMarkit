<%= link_to user.classifications.where(classification: type).last, method: :delete, remote: true, class: "btn bg-white btn-lg mb0 text-left btn-block" do %>
	<div class="row">
		<div class="col-xs-3">
			<img src="http://www.rantlifestyle.com/wp-content/uploads/2013/04/youth.jpg" class="bg-grey img-responsive img-rounded">
		</div>
		<div class="col-xs-9">
			<span class="pull-right ion-checkmark h3 no-margin"></span>
			<span class="bold fs_20 text-black"><%= type %></span>
			<p class="fs_12 text-muted mb0"><%= Classification.description(type) %></p>
		</div>
	</div>
<% end %>
<hr class="no-margin"/>
