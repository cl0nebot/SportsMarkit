<li class="has-action-left">
	<a href="#" class="hidden">
		<i class="ion-checkmark-circled text-success"></i>
	</a>
	<a href="#" class="visible">
		<div class="list-content row">
			<div class="col-sm-1">
				<%= image_tag m.user.avatar, class: "face-radius", alt: "", style: "width: 55px; height: 55px;" %>
			</div>

			<div class="col-sm-3">
				<h4 class="semi-bold no-margin capitalize">
					<%= m.user.full_name %>
				</h4>
				<p class="small">
					<small>
						Name
					</small>
				</p>
			</div>
			<div class="col-sm-2">
				<h4 class="no-margin">
					<%= m.participant_classification %>
				</h4>
				<p class="small">
					<small>
						Name
					</small>
				</p>
			</div>
			<div class="col-sm-2">
				<h4 class="no-margin">
					<%= m.position %>
				</h4>
				<p class="small">
					<small>
						Position
					</small>
				</p>
			</div>
			<div class="col-sm-4">
				<h4 class="no-margin">
					<i class="text-grey fa fa-quote-left"></i>
					<%= m.quote %>
				</h4>
				<p class="small">
					<small>
						Quote
					</small>
				</p>
			</div>
		</div>
	</a>
</li>