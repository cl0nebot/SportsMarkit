<div id="roster" class="tab-pane pt40">
	<div class="row bgcolor-white box-shadow-ccc pt20 pr20 pl20 pb30">
		<div class="col-lg-2 col-md-4 col-sm-6 text-center b-r-ddd">
			<h1 class="text-indigo no-margin bold"><%= @heads.count %></h1>
			<h6 class="text-grey semi-bold no-margin "><%= (@heads.count > 1 or @heads.count == 0) ? "Coaches" : "Coach" %></h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 text-center b-r-ddd">
			<h1 class="text-indigo no-margin bold"><%= @team.accepted_athletes.count + @team.userless_athletes.count %></h1>
			<h6 class="text-grey semi-bold no-margin"><%= ((@team.accepted_athletes.count + @team.userless_athletes.count) > 1 or (@team.accepted_athletes.count + @team.userless_athletes.count) == 0) ? "Athletes" : "Athlete" %></h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 text-center b-r-ddd">
			<h1 class="text-indigo no-margin bold"><%= @team.accepted_managers.count + @team.userless_managers.count %></h1>
			<h6 class="text-grey semi-bold no-margin"><%= ((@team.accepted_managers.count + @team.userless_managers.count) > 1 or (@team.accepted_managers.count + @team.userless_managers.count) == 0) ? "Team Managers" : "Team Manager" %></h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 text-center">
			<h1 class="text-indigo no-margin bold"><%= @team.accepted_trainers.count + @team.userless_trainers.count %></h1>
			<h6 class="text-grey semi-bold no-margin"><%= ((@team.accepted_trainers.count + @team.userless_trainers.count) > 1 or (@team.accepted_trainers.count + @team.userless_trainers.count) == 0) ? "Athletic Trainers" : "Athletic Trainer" %></h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 mt5">
			<div class="well bgcolor-light-grey no-margin">
				<div class="btn-group btn-block">
					<button type="button" class="fs_16 btn btn-block btn-white dropdown-toggle" data-toggle="dropdown">
					Find an Athlete <span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<% @team.accepted_athletes.each do |team| %>
							<li>
								<%= link_to user_path(@team.accepted_athletes) do %>
					  			<%= @team.accepted_athletes.name %>
					  		<% end %>
					  	</li>
						<% end %>
					</ul>
				</div><!--.btn-group-->
			</div>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 mt5">
			<div class="well bgcolor-light-grey no-margin">
				<div class="btn-group btn-block">
					<button type="button" class="fs_16 btn btn-block btn-white dropdown-toggle" data-toggle="dropdown">
					Find a Staff Member <span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<% @team.accepted_athletes.each do |team| %>
							<li>
								<%= link_to user_path(@team.accepted_athletes) do %>
					  			<%= @team.accepted_athletes.name %>
					  		<% end %>
					  	</li>
						<% end %>
					</ul>
				</div><!--.btn-group-->
			</div>
		</div>
	</div>

	<hr/>


	<div class="row">
		<div class="col-lg-4">

			<!-- coaches and staff -->
			<div class="panel panel-transparent box-shadow-ccc">
				<div class="panel-heading no-margin">
					<div class="panel-title" id="coach-count">
				       <%= render 'coach_count', heads: @heads %>
				       <h3 class="semi-bold fs_20 mb0">
							Coaches and Administrative Staff Members
						</h3>
					</div>
				</div><!--.panel-heading-->
				<hr class="no-margin"/>
				<div class="panel-body no-padding" id="heads-of-team">
					<%= render 'heads_of_team', heads: @heads %>
				</div><!--.panel-body-->
			</div><!--.panel-->
			<br/>
			<!-- coaches and staff -->

		</div>

		<div class="col-lg-8">

			<!-- team roster -->
			<div class="panel panel-transparent box-shadow-ccc">
				<div class="panel-heading no-margin">
					<div class="panel-title" id="athlete-count">
					  	<%= render 'athlete_count', members: @members%>
					  	<h3 class="semi-bold fs_20 mb0">
							Active Athletes
						</h3>
					</div>
				</div><!--.panel-heading-->
				<hr class="no-margin"/>
				<div class="panel-body no-padding" id="athletes-of-team">
		         <%= render 'athletes_of_team', members: @members, team: @team %>
				</div><!--.panel-body-->
			</div><!--.panel-->
			<!-- team roster -->

		</div>
	</div>
</div>
