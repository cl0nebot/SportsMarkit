<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>

<div class="modal fade" id="<%= modal_id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog compressed extra-compressed">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel" class="bold">Update Sport.</h3>
      </div>
      <div class="modal-body">
		  <%= form_for [sport], html: {multipart: true, class: 'remote-upload'} do |f| %>
          <!-- jasny -->
		  <div class="center">
			  
			<div class="row example-row">
				<div class="col-md-3">Sport </div><!--.col-md-3-->
				<div class="col-md-9">
					<div class="inputer">
						<div class="input-wrapper">
							<%= f.text_field :sport, type: "text", class: "form-control", placeholder: ""%>
						</div>
					</div>
				</div><!--.col-md-9-->
			</div><!--.row-->
			  


  <%= f.fields_for :sport_icons, sport.sport_icons.last do |s| %>

				<div class="row example-row">
					<div class="col-md-3">Icon</div><!--.col-md-3-->
					<div class="col-md-9">

						<div class="fileinput fileinput-new" data-provides="fileinput">
							<div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
								<img data-src="<%= image_path(sport.sport_icons.last.icon) %>" src="<%= image_path(sport.sport_icons.last.icon) %>" alt="..." style="height: 100%; width: 100%;">
							</div>
							<div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
							<div>
								<span class="btn btn-default btn-file">
									<span class="fileinput-new">Select image</span>
									<span class="fileinput-exists">Change</span>
              <%= s.file_field :icon %>
								</span>
								<a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
							</div>
						</div>

					</div><!--.col-md-9-->
				</div><!--.row-->
			
	<% end %>
     
	 
	<%= f.fields_for :sport_photos, sport.sport_photos.last do |g| %>

     <div class="row example-row">
       <div class="col-md-3">Photo</div><!--.col-md-3-->
       <div class="col-md-9">

         <div class="fileinput fileinput-new" data-provides="fileinput">
           <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
             <img data-src="<%= image_path(sport.sport_photos.last.photo) %>" src="<%= image_path(sport.sport_photos.last.photo) %>" alt="..." style="height: 100%; width: 100%;">
           </div>
           <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
           <div>
             <span class="btn btn-default btn-file">
               <span class="fileinput-new">Select image</span>
               <span class="fileinput-exists">Change</span>
               <%= g.file_field :photo, type: "file"%>
             </span>
             <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
           </div>
         </div>
     <% end %>
	 
	 
       
      </div>
    </div>
    <div class="modal-footer">
	   <%= f.submit "Save", class: "btn-large btn-standard btn-primary"%>
    </div>
  </div>
  <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
</div>
<% end %>
<!-- /.modal -->