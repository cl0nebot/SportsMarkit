<%= form_for current_user.relationships.build, html: {method: :post, remote: true } do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :team_id, value: @team.id %>

  <%= button_tag class: "pull-right btn btn-blue-grey button-striped button-full-striped btn-ripple mr20" do %>
  	<i class="ion-plus-circled text-indigo mr5"></i> Join Team
  <% end %>

<% end %>