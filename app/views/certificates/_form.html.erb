<div id='certificate-<%= m.fake_id %>' class="row margin-top-20">
  <%= form_for [u, m], remote: true do |f| %>
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)%>

    <div class="row">
      <div class="col-md-1">
        <div class="list-action-left">
          <% if m.persisted? %>
            <%= link_to certificate_path(m), class: "btn btn-floating btn-orange btn-sm btn-ripple margin-top-10", method: :delete, remote: :true  do %>
              <i class="ion-close"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-md-11">
        <div class="row">
          <div class="col-md-6">
            <div class="row example-row">
              <div class="col-md-12">Certification Name</div><!--.col-md-3-->
              <div class="col-md-12">
              <div class="inputer">
                  <%= f.select(:certification_id, options_for_select(Certification.pluck(:name, :id)), {}, {:class => 'selecter', :required => 'true', data:{live_search: 'true', width: '100%'}}) %>
                </div>
              </div><!--.col-md-9-->
            </div>
          </div>
          <div class="col-md-1">
            <div class="row example-row">
              <div class="col-md-12">Expires</div><!--.col-md-3-->
              <div class="col-md-12">
                <div class="checkboxer form-inline">
                  <!-- THIS NEEDS TO BE PASSED A UNIQUE ID INORDER TO WORK -->
                  <%= f.check_box :expires, id: "certificate_expires_#{m.fake_id}" %>
                  <label for="certificate_expires_<%=m.fake_id%>"></label>
                  <!-- THIS NEEDS TO BE PASSED A UNIQUE ID INORDER TO WORK -->
                </div>
              </div><!--.col-md-9-->
            </div><!--.row-->
          </div>
          <div class="col-md-3">
            <div class="row example-row">
              <div class="col-md-12">Expiration Date </div><!--.col-md-3-->
              <div class="col-md-12">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%= f.text_field :expiration, class: "form-control  bootstrap-daterangepicker-basic active", placeholder: "", required: true  %>
                  </div>
                </div>
              </div><!--.col-md-9-->
            </div>
          </div>
          <div class="col-md-2">
            <div class="row example-row">
              <div class="col-md-12"> </div><!--.col-md-3-->
              <div class="col-md-12">
                <%= f.hidden_field :user_id %>
                <% if m.persisted? %>
                  <a class="margin-top-20 btn btn-blue btn-ripple submit-form">
                    Update
                  </a>
                  
                <% else %>
                  <button class="btn btn-blue submit-form">Create</button>
                  <%= f.hidden_field :fake_id %>
                  <a class="btn btn-orange btn-ripple remove-form">
                    <i class="ion-android-close"></i>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      
    </div>
  <% end %>
</div>
