	<div class="row">


<div class="row">
	<div class="col-lg-10 col-lg-offset-1 col-md-12">
		<div class="panel">
			<div class="panel-heading">
				<div class="panel-title"><h4>Pending Administrative Approvals</h4></div>
			</div><!--.panel-heading-->
			<div class="panel-body padding-left-40 padding-right-40">
				<div class="row example-row">
					<div class="col-md-12">
						<h4 class="semi-bold text-primary">Athletic Directors</h4>
					</div><!--.col-md-3-->
					<div class="col-md-12">
						<table class="table table-condensed">
							<thead>
								<tr>
									<th>School</th>
									<th>Requesting User</th>
									<th>Mobile #</th>
									<th>Date of Request</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								<%= render 'approval/athletic_directors', athletic_directors: @athletic_directors  %>
							</tbody>
						</table>
					</div><!--.col-md-9-->
				</div><!--.row-->
			</div><!-- panel-body -->

			<div class="panel-body padding-left-40 padding-right-40">
				<div class="row example-row">
					<div class="col-md-12">
						<h4 class="semi-bold text-primary">Coaches</h4>
					</div><!--.col-md-3-->
					<div class="col-md-12">
						<table class="table table-condensed">
							<thead>
								<tr>
									<th>School</th>
									<th>Requesting User</th>
									<th>Mobile #</th>
									<th>Date of Request</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								<%= render 'approval/coaches', coaches: @coaches %>
							</tbody>
						</table>
					</div><!--.col-md-9-->
				</div><!--.row-->
			</div><!-- panel-body -->
		</div>
	</div>
</div>



