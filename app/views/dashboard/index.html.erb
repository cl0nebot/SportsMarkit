                <% end %>
                <% unless ["team", "facility"].include? klass %>
                  <li class="has-action-left has-action-right">
                    <%= link_to eval("new_#{klass}_facility_path(@object)"), class: "visible" do %>
                      <div class="list-action-left">
                        <i class="ion-plus-circled icon"></i>
                      </div>
                      <div class="list-content">
                        <span class="title">Add Facility</span>
                        <span class="caption">Add or create a new facility.</span>
                      </div>
                      <div class="list-action-right">
