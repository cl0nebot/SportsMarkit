                      <i class="ion-android-upload icon"></i>
                    </div>
                    <div class="list-content">
                      <span class="title">Add Photo, Articles, and Video</span>
                      <span class="caption">Enhance your profile with media.</span>
                    </div>
                    <div class="list-action-right">
                      <span class="top">2 hr</span>
                      <i class="ion-android-done bottom"></i>
                    </div>
                  <% end %>
