<% cache ["v1", "v1", "login-signup"] do %>
  <body class="bg-login">
    <div class="login-screen">
      <div class="panel-login blur-content">
        <div class="logo">
          <h2 class="logo text-light-shadow text-center mb0">
            <%= image_tag("icons/flag.png", height: "35", width: "auto", class: "margin-right-5", style: "margin-top: -3px;") %>
            <span class="text-white">SportsMarkit</span>
          </h2>
        </div>
        <div id="pane-login" class="panel-body active">
          <%= render "users/login_signup/login" %>
        </div>
        <div id="pane-forgot-password" class="panel-body">
          <%= render "users/login_signup/forgot_password" %>
        </div>
        <div id="pane-create-account" class="panel-body">
          <%= render "users/login_signup/create_account" %>
        </div>
      </div>
    </div>
    <div class="bg-blur dark">
      <div class="overlay"></div>
    </div>
    <svg version="1.1" xmlns=''>
      <filter id='blur'>
        <feGaussianBlur stdDeviation='4' />
      </filter>
    </svg>
  </body>
<% end %>
