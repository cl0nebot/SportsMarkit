<body class="bg-login">
  <div class="login-screen">
    <div class="panel-login blur-content">

      <div class="logo">
        <h2 class="logo text-light-shadow text-center no-margin">
          <%= image_tag("icons/flag.png", height: "35", width: "auto", class: "margin-right-5", style: "margin-top: -3px;") %>
            <span class="text-white">SportsMarkit</span>
        </h2>
      </div><!--.logo-->

      <div id="pane-login" class="panel-body active">
        <%= render "users/login_signup/login" %>
      </div><!--#login.panel-body-->

      <div id="pane-forgot-password" class="panel-body">
        <%= render "users/login_signup/forgot_password" %>
      </div><!--#pane-forgot-password.panel-body-->

      <div id="pane-create-account" class="panel-body">
        <%= render "users/login_signup/create_account" %>
      </div><!--#login.panel-body-->

    </div><!--.blur-content-->
  </div><!--.login-screen-->

  <div class="bg-blur dark">
    <div class="overlay"></div><!--.overlay-->
  </div><!--.bg-blur-->

  <svg version="1.1" xmlns='http://www.w3.org/2000/svg'>
    <filter id='blur'>
      <feGaussianBlur stdDeviation='7' />
    </filter>
  </svg>

  <!-- BEGIN INITIALIZATION-->
  <script>
  $(document).ready(function () {
    Pleasure.init();
    Layout.init();
    UserPages.login();
  });
  </script>
  <!-- END INITIALIZATION-->
</body>


