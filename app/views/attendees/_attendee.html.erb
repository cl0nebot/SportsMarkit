<%= form_for current_user.attendees.build, html: {method: :post, remote: true } do |f| %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.hidden_field :event_id, value: @event.id %>
	<%= f.hidden_field :yes, value: true %>
	<%= f.submit "I'M GOING!", class: "btn btn-success" %>
<% end %>

