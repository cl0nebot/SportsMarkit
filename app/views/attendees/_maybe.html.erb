<%= form_for current_user.attendances.where(event_id: @event.id).last, html: {method: :patch, remote: true } do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :event_id, value: @event.id %>
  <%= f.hidden_field :yes, value: true %>
  <%= f.hidden_field :maybe, value: false %>
  <%= f.hidden_field :no, value: false %>
  <%= f.submit "IM GOING!", class: "btn btn-success" %>
<% end %>

