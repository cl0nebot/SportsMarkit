$('#attendee-buttons').empty();
<% if @attendee.yes? %>
	$('#attendee-buttons').append("<%= j render 'attendees/yes' %>");	
<% elsif @attendee.maybe?  %>
    $('#attendee-buttons').append("<%= j render 'attendees/maybe' %>");
<% elsif @attendee.no?  %>
    $('#attendee-buttons').append("<%= j render 'attendees/no' %>");
<% end %>