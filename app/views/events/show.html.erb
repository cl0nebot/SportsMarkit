.layout-device .profile-info .profile-text,
.profile-info .profile-text {
  margin: 0 0 0 0;
  font-size: 24px;
}

</style>

<div class="content">
	<div class="page-header full-content parallax">
		<%= render "events/show/header" %>
		<%= render "events/show/tab_navigation" %>
	</div>
</div>

<!-- main content div -->
