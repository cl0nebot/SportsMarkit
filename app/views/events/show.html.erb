<style>

.layout-device .profile-info .profile-text,
.profile-info .profile-text {
  margin: 0 0 0 0;
  font-size: 24px;
}

</style>

<div class="content">

	<div class="page-header full-content parallax">
		
		<div class="parallax-bg" style="background: url('http://svite-league-apps-content.s3.amazonaws.com/bgimages/sports-wave.jpg') 50% 50%;">
		</div>

		<div class="bg-overlay"></div><!--.bg-overlay-->

		<div class="row">
			<div class="col-sm-5">
				<h1>
					<i class="ion-calendar m-r-5"></i>
					<small>
						<%= @event.title %> 
					</small>
				</h1>
			</div><!--.col-->
			<div class="col-sm-6">
				<ol class="breadcrumb">
					<li><a href="/"><i class="ion-home"></i></a></li>
					<li><a href="<%= teams_path %>">[User Name]</a></li>
					<li><a href="<%= teams_path %>">Events</a></li>
					<li><a href="#" class="active">Event Name</a></li>
				</ol>
			</div><!--.col-->
			<div class="col-sm-1 text-right">
				<a href="<%= edit_user_path(User.first) %>" class="btn btn-floating btn-light-blue">
					<i class="ion-android-settings"></i>
				</a>
			</div>
		</div><!--.row-->


		<div class="profile-info">
			<!--.profile-photo-->
			<div class="profile-text light capitalize">
				<span class="h6 text-amber bold">
					<%= format(@event.starts_at, 4) %>
					<%= format(@event.starts_at, 8) %>
					- 
					<%= format(@event.ends_at, 4) %>
					<%= format(@event.ends_at, 8) %>
				</span>
				<br/>
				<%= @event.title %> 
				<h4 class="text-grey">
					<%= @event.event_type %>
				</h4>
				<span class="caption">
					Created By: <%= link_to @event.user.full_name, user_path(@event.user) %>
				</span>
			</div><!--.profile-text-->
		</div><!--.profile-info-->


		<div class="header-tabs scrollable-tabs sticky">
			<ul class="nav nav-tabs tabs-active-text-white tabs-active-border-yellow">
				<li class="active">
					<a href="#location" data-toggle="tab" class="btn-ripple">Location</a>
				</li>
				<li>
					<a href="#yes" data-toggle="tab" class="btn-ripple">Attending</a>
				</li>
				<li>
					<a href="#maybe" data-toggle="tab" class="btn-ripple">Maybe</a>
				</li>
				<li><a href="#no" data-toggle="tab" class="btn-ripple">Not Going</a></li>
			</ul>
		</div>


		<div class="social-buttons">
			<%= render 'rsvp' %>
		</div>

	</div>
</div>

	<div class="row user-profile">
		<div class="col-md-12">
			<div class="tab-content without-border">
				

				<!-- following -->
				<div id="location" class="tab-pane active">
					<h3><%= @event.facility.name %></h3>
					<br>
					<div class="row contact-us">
						<div class="col-md-12">
      						<%= gmaps4rails(@json) %>
						</div><!--.col-->
					</div>
				</div>
				<!--#following.tab-pane-->

				<!-- following -->
				<div id="yes" class="tab-pane">

					<% @attendees.each do |person| %>
						<div class="panel">
							<div class="panel-body without-padding">
								<ul class="list-material">
									<li class="has-action-left">
										<a href="#" class="visible">
											<div class="list-action-left">
												<img src="<%= image_path("placeholders/user.jpg", class: "face-radius") %>">
											</div>
											<div class="list-content">
												<span class="title">
													<%= person.user.full_name %>
												</span>
											</div>
										</a>
									</li>
								</ul>
							</div><!--.panel-body-->
						</div><!--.panel-->
					<% end %>

				</div>
				<!--#following.tab-pane-->

				<!-- teams -->
				<div id="maybe" class="tab-pane">

					<% @maybes.each do |person| %>

						<div class="panel">
							<div class="panel-body without-padding">
								<ul class="list-material">
									<li class="has-action-left">
										<a href="#" class="visible">
											<div class="list-action-left">
												<img src="<%= image_path("placeholders/user.jpg", class: "face-radius") %>">
											</div>
											<div class="list-content">
												<span class="title">
													<%= person.user.full_name %>
												</span>
											</div>
										</a>
									</li>
								</ul>
							</div><!--.panel-body-->
						</div><!--.panel-->

					<% end %>

				</div>
				<!--#teams.tab-pane-->

				<!-- people -->
				<div id="no" class="tab-pane">
					
					<% @nos.each do |person| %>

						<div class="panel">
							<div class="panel-body without-padding">
								<ul class="list-material">
									<li class="has-action-left">
										<a href="#" class="visible">
											<div class="list-action-left">
												<img src="<%= image_path("placeholders/user.jpg", class: "face-radius") %>">
											</div>
											<div class="list-content">
												<span class="title">
													<%= person.user.full_name %>
												</span>
											</div>
										</a>
									</li>
								</ul>
							</div><!--.panel-body-->
						</div><!--.panel-->
						
					<% end %>
				</div>

			</div><!--.tab-content-->
		</div><!--.col-->
	</div><!--.row-->
</div><!--.content-->





