      <%= image_tag("placeholders/users.jpg", class: "col-md-2 img-thumbnail img-responsive b-rad-6", style: "margin-top: -180px; z-index: 99999;") %>
      <div class="col-md-10">
      </div>
    </div>
    <div class="row">
			<div class="col-md-12">

				<div class="tab-content without-border pt40">

					<%= render "events/show/location_tab" %>
					<%= render "events/show/attending_tab" %>
