<%= link_to "I'm Going", event_rsvp_path(event.id, user_id: current_user.id, rsvp: "yes"), class: "btn btn btn-success", remote: true, disabled: (current_user.attendees.where(user_id: current_user.id, event_id: event.id, yes: true).present? ? true : false ) %>
<%= link_to "Maybe", event_rsvp_path(event.id, user_id: current_user.id, rsvp: "maybe"), class: "btn btn btn-warning", remote: true, disabled: (current_user.attendees.where(user_id: current_user.id, event_id: event.id, maybe: true).present? ? true : false ) %>
<%= link_to "Not Going", event_rsvp_path(event.id, user_id: current_user.id, rsvp: "no"), class: "btn btn btn-danger", remote: true, disabled: (current_user.attendees.where(user_id: current_user.id, event_id: event.id, no: true).present? ? true : false ) %>