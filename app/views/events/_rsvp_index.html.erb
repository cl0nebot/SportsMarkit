
   <% if @user.attendances.where(event_id: event.id).empty? %>

	  <%= form_for @user.attendees.build, html: {method: :post, remote: true } do |f| %>
		  <%= f.hidden_field :user_id, value: @user.id %>
		  <%= f.hidden_field :event_id, value: event.id %>
		  <%= f.hidden_field :yes, value: true %>
		  <%= f.submit "Attend", class: "btn btn-green btn-flat" %>
	  <% end %>

	  <%= form_for @user.attendees.build, html: {method: :post, remote: true } do |f| %>
		  <%= f.hidden_field :user_id, value: @user.id %>
		  <%= f.hidden_field :event_id, value: event.id %>
		  <%= f.hidden_field :maybe, value: true %>
		  <%= f.submit "Maybe", class: "btn btn-orange btn-flat" %>
	  <% end %>

	  <%= form_for @user.attendees.build, html: {method: :post, remote: true } do |f| %>
		  <%= f.hidden_field :user_id, value: @user.id %>
		  <%= f.hidden_field :event_id, value: event.id %>
		  <%= f.hidden_field :no, value: true %>
		  <%= f.submit "Decline", class: "btn btn-red btn-flat" %>
	  <% end %>	  

   <% elsif @user.attendances.where(event_id: event.id, yes: true).last.present? %>

	  <%= render 'attendees/yes_index', event: event %>	  

   <% elsif @user.attendances.where(event_id: event.id, maybe: true).last.present? %>

      <%= render 'attendees/maybe_index', event: event %>

   <% elsif @user.attendances.where(event_id: event.id, no: true).last.present? %>

	   <%= render 'attendees/no_index', event: event %>

<% end %>

		  
						