<!-- Modal -->
<div class="modal fade" id="<%= facility_type.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= form_for facility_type, html: {id: "edit-facility-type-form", multipart: true, data: {remote: true}} do |f| %>

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <br>
        <i class="icon-credit-card icon-7x"></i>
        <h4 id="myModalLabel" class="semi-bold">Edit "<span class="bold"><%= facility_type.facility_type %></span>"" position</h4>
      </div>
      <hr class="no-margin"/>
      <div class="modal-body">
        <div class="row example-row">
          <div class="col-md-12">Facility Type</div>
          <div class="col-md-12">
            <div class="inputer">
              <div class="input-wrapper">
                <%= f.text_field :facility_type, placeholder: "facility type", class: "form-control" %>
              </div>
            </div>
          </div><!--.col-md-9-->
        </div><!--.row-->
      </div>
      <div class="modal-footer bg-primary">
        <%= f.submit "Save", class: "btn btn-white" %>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
  <% end %>

</div>
<!-- /.modal -->

