<div class="content">
  
  <!-- page header -->
  <div class="page-header full-content bg-blue">
    <div class="row">
      <div class="col-sm-6">
        <h1>Claiming a School <small class="m-l-10 inline-block"> Claim Form</small></h1>
      </div><!--.col-->
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="/"><i class="ion-home"></i></a></li>
          <li><a href="<%= schools_path %>">Schools</a></li>
          <li><a href="#">[School Name]</a></li>
          <li><a href="#" class="active">Claim</a></li>
        </ol>
      </div><!--.col-->
    </div><!--.row-->
  </div><!--.page-header-->

  <div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-md-offset-2">
      <div class="panel box-shadow-ccc">
        
        <!-- panel header -->
        <div class="panel-heading">
          <div class="panel-title text-center">
            <br/>
            <h3>Claim Your school, it's free.</h3>
          </div>
        </div>
        <!--.panel-heading-->
        
        <!-- panel body -->
        <div class="panel-body m-b-30 pr40 pl40">

          <%= form_for new_user, url: partner_signup_claim_path, html: {id: 'partner-signup-form', :class => "animated fadeIn", style: "display: ;"} do |f| %>


          <p class="text-center no-margin text-muted"><small>STEP 1</small></p>
          <h4 class="text-primary text-center no-margin">
            Find your school.
          </h4>

          <hr class="margin-top-10"/>

          <div class="form-row">
            <div class="row example-row no-margin">
              <div class="col-md-12">
                <div class="inputer">
                  <%= f.collection_select :school_ids, @schools, :id, :name, {prompt: "Select Your School"}, { :multiple => false, :style => "width:100%", :id => "multi", :placeholder => "Select Your Spa", :class => "selecter", :data => {width: '100%'}  } %>
                </div>
              </div>
            </div><!--.col-md-9-->
          </div><!--.row-->
        </div>

        <hr class="margin-top-10"/>

        <div class="panel-body m-b-30 pr40 pl40">
          <p class="text-center no-margin text-muted"><small>STEP 2</small></p>
          <h4 class="text-primary text-center no-margin">
            Enter information for <br/>your account administrator.
          </h4>

          <hr class="margin-top-10"/>

          <div class="form-row">
            <div class="row example-row">
              <div class="col-md-12">First Name</div><!--.col-md-3-->
              <div class="col-md-12">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%= f.text_field :first_name, label: false, :autofocus => true, placeholder:"Last Name", class: "form-control", type: "text" %>
                  </div>
                </div>
              </div>
            </div><!--.col-md-9-->
          </div><!--.row-->

           <div class="form-row">
            <div class="row example-row">
              <div class="col-md-12">Last Name</div><!--.col-md-3-->
              <div class="col-md-12">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%= f.text_field :last_name, label: false, :autofocus => true, placeholder:"First Name", class: "form-control", type: "text" %>
                  </div>
                </div>
              </div>
            </div><!--.col-md-9-->
          </div><!--.row-->

          <div class="form-row">
            <div class="row example-row">
              <div class="col-md-12">Email</div><!--.col-md-3-->
              <div class="col-md-12">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%= f.text_field :email, :label => false, :autofocus => true, placeholder: "Email", class: "form-control", type: "text" %>
                  </div>
                </div>
              </div>
            </div><!--.col-md-9-->
          </div><!--.row-->

          <div class="form-row">
            <div class="row example-row">
              <div class="col-md-12">Password</div><!--.col-md-3-->
              <div class="col-md-12">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%= f.text_field :password, :label => false, :autofocus => true, placeholder: "Password", type: "password", class: "form-control" %>
                  </div>
                </div>
              </div>
            </div><!--.col-md-9-->
          </div><!--.row-->


          <div class="form-row">
            <div class="row example-row">
              <div class="col-md-12">Mobile Phone Number</div><!--.col-md-3-->
              <div class="col-md-12">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%= f.text_field :mobile_phone_number, placeholder: "Mobile Phone", class: "form-control" %>
                  </div>
                </div>
              </div>
            </div><!--.col-md-9-->
          </div><!--.row-->
        </div>

        <!--.panel-body-->
        <div class="panel-footer form-layout">
          <br/>
            <%= f.submit "Claim Your School", :class => "btn btn-primary btn-block", type: "submit", name: "partner_signup" %>
            <br/>
        </div><!--.panel-body-->
        <% end %>
      </div><!--.panel-->
    </div><!--.col-md-12-->
  </div><!--.row-->