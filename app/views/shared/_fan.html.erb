<% if current_user %>
	
	<div class="pull-right">
		<div id="fan-button">
			<% if current_user.follows.where(fannable_id: @object.id, fannable_type: @class).empty? %>
			<%= render 'fans/fan', object: @object %>
			<% else %>
			<%= render 'fans/unfan', object: @object %>
			<% end %>
		</div>
	</div>

	<div class="pull-right mr20">
		<% if current_user.admin? %>
	  	<%= link_to 'Edit Background', '#', id: 'edit-background', class: 'btn btn-inverse btn-ripple', 'data-edit' => 'edit' %>
    <% end %>
  </div>

<% end %>