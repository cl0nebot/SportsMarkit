<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>


<div class="modal fade" id="pPhoto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= form_for [@object, @picture], html: {multipart: true, class: 'remote-upload'} do |f| %>

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <i class="icon-credit-card icon-7x"></i>
      <h4 id="myModalLabel" class="semi-bold mt0">
        <i class="ion-image mr5 text-indigo fs_28"></i> Add a <span class="bold">New Photo</h4>
      </div>
      <hr class="no-margin"/>
      <div class="modal-body">
          <!-- jasny -->
		  <div class="center">
        <div class="fileinput fileinput-new" data-provides="fileinput">
          <div class="fileinput-new thumbnail" style="width: 100%; height: auto;">
              <%= image_tag("placeholders/user-gallery.png", class: "clearfix", alt: "...") %>
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 200px;"></div>
          <div>
             <%= f.hidden_field :photo_owner_id, :value => @object.id %>
			       <%= f.hidden_field :photo_owner_type, :value => @object.class.to_s %>
            <span class="btn btn-sm btn-grey btn-file pull-right"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><%= f.file_field :image %></span>
            <a href="#" class="btn btn-sm btn-orange fileinput-exists" data-dismiss="fileinput">Remove</a>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer bgcolor-light-grey">
	   <%= f.submit "Save", class: "btn btn-indigo"%>
    </div>
  </div>
  <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
</div>
<% end %>
<!-- /.modal -->