<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>


<div class="modal fade" id="pPhoto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= form_for [@object, @picture], html: {multipart: true, class: 'remote-upload'} do |f| %>

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>        <br>
        <i class="icon-credit-card icon-7x"></i>
        <h1 id="myModalLabel" class="semi-bold">Update <span class="bold">Profile</span> picture</h1>
      </div>
      <hr class="no-margin"/>
      <div class="modal-body">
          <!-- jasny -->
		  <div class="center">
        <div class="fileinput fileinput-new" data-provides="fileinput">
          <div class="fileinput-new thumbnail" style="width: 200px; height: 200px;">
              <img class="thumbnail clearfix" src="http://hasslefreeliving.com/wp-content/uploads/2012/10/placeholder.gif" alt="...">
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 200px;"></div>
          <div>
             <%= f.hidden_field :photo_owner_id, :value => @object.id %>
			       <%= f.hidden_field :photo_owner_type, :value => @object.class.to_s %>
            <span class="btn btn-sm btn-primary btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><%= f.file_field :image %></span>
            <a href="#" class="btn btn-sm btn-danger fileinput-exists" data-dismiss="fileinput">Remove</a>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
	   <%= f.submit "Save", class: "btn-large btn-standard btn-primary"%>
    </div>
  </div>
  <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
</div>
<% end %>
<!-- /.modal -->