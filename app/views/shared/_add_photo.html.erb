<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>

<div class="text-center">
  <div class="fileinput fileinput-new" data-provides="fileinput">
    <div class="fileinput-new no-margin">
      <div class="img-wrapper mb5">
          <%= image_tag "placeholders/image.png", class: "thumbnail img-responsive"   %>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="fileinput-preview fileinput-exists"></div>
    <div class="m-t-15 p-b-10 center">

  		<%= link_to "#", class: "btn btn-white box-shadow-ccc mr5", "data-toggle" => "modal", "data-target" => "#pPhoto" do %>
		 Upload Photo <i class="ion-plus-circled margin-left-10"></i>
		<% end %>

	  
     <% if false %>
      <% unless @pictures.empty? %>
        <%#= render 'users/delete_user_profile_picture_modal', photo: @picture %>
        <button class="btn btn-danger btn-sm box-shadow-ccc" data-toggle="modal" data-target="#p<%=@picture.id %>">
          Remove
        </button>
      <% end %>
	  <% end %>
	  
    </div>
  </div>
</div>

				