<div class="modal fade full-height from-right" id="panel-new-facility" tabindex="-1" role="dialog" aria-hidden="true">
	<div id="new-facility-partial">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<div class="row">
						<div class="col-md-12 pr20 pl20 pt10">
							<div class="panel">
								<div class="panel-heading no-border">
									<div class="panel-title">
										<h3 class="bold">Adding a New Facility</h3>
										<!-- <hr class="light mb10"/> -->
										<br/>
									    <p class="mb10 small upper fs_12 bold text-muted">Option: 1</p>
										<%= link_to selection_option_facilities_path(selection: "form", object: @object.class.to_s, object_id: @object.try(:id)), remote: true, class: "btn btn-primary button-striped button-full-striped btn-ripple" do %>
										  	Create and Add a New Facility
										<% end %>
										
										<hr class="light mb10"/>
									    <p class="mb10 small upper fs_12 bold text-muted">Option: 2</p>
									    <% if @object.present? %>
										<% unless @object.class.to_s == "League" %>
										    <%= link_to selection_option_facilities_path(selection: "school", object: @object.class.to_s, object_id: @object.id), remote: true, class: "btn btn-primary button-striped button-full-striped btn-ripple" do %>
											  Add a School Facility
											<% end %>
										<% end %>
										
										<hr class="light mb10"/>
									    <p class="mb10 small upper fs_12 bold text-muted">Option: 3</p>
										
										<% if ["teams","schools", "leagues"].include? params[:controller] %>

									    <!-- MAKE THIS WORK WITH ADDITION FORM CODE ************************************* -->
											<%= form_tag add_multiple_facility_links_path, remote: true do |f| %>

										    <%= select_tag :facility_ids, options_for_select(Facility.pluck(:name, :id), :selected=> @object.facility_links.pluck(:facility_id)), class: "selecter bg-white margin-bottom-0", multiple: true, "data-live-search" =>  true %>
											<%= hidden_field_tag :facility_owner_type, @object.class.to_s %>
											<%= hidden_field_tag :facility_owner_id, @object.id %>
										
										
										
											<br>
											<%= submit_tag %>
										
											<% end %>
										
										<% end %>
										
										
										
										

									    <!-- MAKE THIS WORK WITH ADDITION FORM CODE ************************************* -->

										<%#= link_to selection_option_facilities_path(selection: "search", object: @object.class.to_s, object_id: @object.id), remote: true, class: "btn btn-primary button-striped button-full-striped btn-ripple" do %>
										  <!-- Search Existing Facilities -->
										<%# end %>
										<hr class="light mb10"/>
										<% end %>
									</div>

								</div><!--.panel-heading-->
								<div class="panel-body pt20">
							</div><!--.panel-body-->
						</div><!--.col-md-12-->
					</div><!--.row-->
				</div>
			</div>
						
			</div>
		</div>
	</div>
</div><!--.modal-->