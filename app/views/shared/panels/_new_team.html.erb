<div class="modal fade full-height from-right" id="panel-new-team" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Add a New Team</h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-12">
						<div class="panel">
							<div class="panel-heading">
								<div class="panel-title"><h4>Complete the form below. </h4></div>
							</div><!--.panel-heading-->
							<div class="panel-body">


								<%= form_for Team.new, url: teams_path, method: :post do |f| %>

									<div class="row example-row">
									<div class="col-md-3">Name </div><!--.col-md-3-->
									<div class="col-md-9">
										<div class="inputer">
											<div class="input-wrapper">
												<%= f.text_field :name, type: "text", class: "form-control", placeholder: ""%>
												<% if params[:controller]== "schools" %>
												  <%= f.hidden_field :school_id, value: @school.id %>									
												<% end %>
											</div>
										</div>
									</div><!--.col-md-9-->
									</div><!--.row-->

									<div class="row example-row">
									<div class="col-md-3">Sport </div><!--.col-md-3-->
									<div class="col-md-9">
										<div class="inputer">
											<div class="input-wrapper">
												<%= f.select :sport, Sport.pluck(:sport), :class => 'selecter', :prompt => 'Select One' %>
											</div>
										</div>
									</div><!--.col-md-9-->
									</div><!--.row-->

							</div><!--.panel-body-->
						</div><!--.panel-->
					</div><!--.col-md-12-->
				</div><!--.row-->
			</div>
			<div class="modal-footer">
				<%= f.submit "Create Team", class: "btn btn-blue" %>
			</div>
			<% end %>			
		</div>
	</div>
</div><!--.modal-->


