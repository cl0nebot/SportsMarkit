<div class="row ">
  <% @teams.each do |team| %>
    <div class="col-md-4 col-sm-12">
      <div class="card card-meal card-meal-blue card-square card-shadow">
        <div class="card-heading row pr15 pl15 pt10 pb10">
          <div class="col-md-12">
            <h4 class="card-title capitalize no-margin">
              <span class="semi-bold lh_22">
                <%= link_to team.proper_name, "/teams/#{team.slug}" %>
              </span>
            </h4>
            <div class="card-subhead capitalize">
              <h5 class="semi-bold mb0 text-muted">
                <%#= image_tag Sport.find_by_sport(team.sport).try(:default_photo), height: "10", width: "auto" %>
                <small><%= team.sport %> Team</small>
              </h5>
            </div>
            <!--.card-subhead-->
            <div class="card-subhead capitalize">
              <h6 class="semi-bold no-margin">
                <small><i class="ion-location text-primary"></i> <%= team.city_state %></small>
              </h6>
            </div>
            <!--.card-subhead-->
          </div>
        </div>
        <!--.card-heading-->
        <div class="card-body">
          <div class="image">
            <a href="#">
              <%= image_tag("http://www.oxtonhc.co.uk/wp-content/themes/oxtonhc/library/images/team-placeholder.jpg") %>
            </a>
          </div>
          <!--.image-->
        </div>
        <!--.card-body-->
      </div>
      <!--.card-->
    </div>
    <!--.col-md-4-->
  <% end %>
</div>
<!--.row-->