<div class="search-layer">
	<div class="search">
		<form action="pages-search-results.html">
			<div class="form-group">
				<input type="text" id="input-search" class="form-control" placeholder="type something">
				<button type="submit" class="btn btn-default disabled"><i class="ion-search"></i></button>
			</div>
		</form>
	</div><!--.search-->

	<div class="results">
		<div class="row">
			<div class="col-md-4">
				<div class="result result-users">
					<h4>Leagues <small>(3)</small></h4>

					<ul class="list-material">
						<li class="has-action-left">
							<a href="#" class="hidden">
								<i class="ion-android-delete"></i>
							</a>
							<a href="#" class="visible">
								<div class="list-action-left">
									<img src="<%= image_path("placeholders/league.jpg")%>" class="face-radius" alt="">
								</div>
								<div class="list-content">
									<span class="title">Pari Subramanium</span>
									<span class="caption">Legacy Response Assistant</span>
								</div>
							</a>
						</li>
						<li class="has-action-left">
							<a href="#" class="hidden">
								<i class="ion-android-delete"></i>
							</a>
							<a href="#" class="visible">
								<div class="list-action-left">
									<img src="<%= image_path("placeholders/league.jpg")%>" class="face-radius" alt="">
								</div>
								<div class="list-content">
									<span class="title">Andrew Fox</span>
									<span class="caption">National Branding Technician</span>
								</div>
							</a>
						</li>
						<li class="has-action-left">
							<a href="#" class="hidden"><i class="ion-android-delete"></i></a>
							<a href="#" class="visible">
								<div class="list-action-left">
									<img src="<%= image_path("placeholders/league.jpg")%>" class="face-radius" alt="">
								</div>
								<div class="list-content">
									<span class="title">Lieke Vermeulen</span>
									<span class="caption">Global Tactics Consultant</span>
								</div>
							</a>
						</li>
					</ul>

				</div><!--.results-user-->
			</div><!--.col-->
			<div class="col-md-4">
				<div class="result result-posts">
					<h4>Children's Events <small>(5)</small></h4>
					<% if current_user.is_parent? %>

                    <% current_user.children_events.each do |att| %>
					<ul class="list-material">
						<li class="has-action-left">
							<a href="#" class="hidden"><i class="ion-android-delete"></i></a>
							<a href="#" class="visible">
								<div class="list-action-left">
									<img src="<%= image_path("placeholders/team.jpg")%>" class="img-radius" alt="">
								</div>
								<div class="list-content">
									<span class="title"><%= att.event.title %></span>
									<span class="caption"><%= att.event.description %></span>
								</div>
							</a>
						</li>
						
					<% end %>
					
					
					<% end %>
						
					</ul>

				</div><!--.results-posts-->
			</div><!--.col-->
			<div class="col-md-4">
				<div class="result result-files">
					<h4>Schools <small>(1)</small></h4>
					<p>No results were found</p>
				</div><!--.results-files-->
			</div><!--.col-->

		</div><!--.row-->
	</div><!--.results-->
</div><!--.search-layer-->