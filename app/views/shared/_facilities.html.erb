<div class="panel box-shadow-ccc">
	<div class="panel-heading">
		<div class="panel-title"><h4> Our Facilities</h4></div>
	</div><!--.panel-heading-->
	<div class="panel-body without-padding">	
		<ul class="list-material borderless">
			<% facilities.each do |facility| %>
				<li class="has-action-left has-action-right" id="facility-show-<%= facility.id %>">
					<div class="list-action-left">
						<i class="ion-checkmark-circled icon-circle"></i>
					</div>
					<div class="list-content">
						<span class="h4 bold ml10"><%= facility.name %></span>
						<% if facility.can_be_edited_by_user?(current_user) %>
             	<%= link_to "Delete", facility_remove_facility_path(facility, id: facility.id), class: "btn btn-primary pull-right", data: {confirm: "Are you sure?"}, remote: true %>
						<% end %>
						<%= link_to "View", facility_path(facility), class: "btn btn-primary pull-right mr10" %>							
					</div>
					
				</li>
				<li class="divider with-border" id="facility-border-<%= facility.id %>"></li>
			<% end %>
		</ul>
	</div><!--.panel-body-->
</div><!--.panel-->


				

