<!-- Modal -->
<div class="modal fade" id="<%= photo.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="close-modal-<%= photo.id %>">Ã—</button>
        <h4 class="no-margin semi-bold">Are you sure you want to delete this photo? </p>
      </div>
      <div class="modal-body bgcolor-white p-b-40">
         <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= link_to eval("#{@object.class.to_s.downcase}_profile_picture_path(@object.id, photo)"), method: :delete, remote: true do %>
                <button class="btn btn-danger btn-block m-t-10">Delete</button>
      			  <% end %>
            </div>
          </div>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->