<% if owner.present? %>
    <% if params[:parent_address].present? %>
        (<%= link_to "Clear", parent_address_school_teams_path(owner_type: owner.class.to_s, owner_id: owner.id, object: object), remote: true %>)
    <% else %>
        (<%= link_to "Use Address from #{owner.name}", parent_address_school_teams_path(parent_address: true, owner_type: owner.class.to_s, owner_id: owner.id, object: object), remote: true %>)
    <% end %>
<% end %>