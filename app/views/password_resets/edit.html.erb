<body class="bg-login">
  <div class="login-screen">
    <div class="panel-login blur-content">

      <div class="logo">
        <h2 class="logo text-light-shadow text-center">
          <%= image_tag("icons/flag.png", height: "35", width: "auto", class: "margin-right-5", style: "margin-top: -3px;") %>
            <span class="text-white">SportsMarkit</span>
        </h2>
      </div><!--.logo-->

      <div id="pane-forgot-password" class="panel-body active">
	   <h2>Let's change your password</h2>
				
	   <%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
	   	<!-- email recover form  -->
	   	<div class="form-group">
	   		<div class="inputer">
	   			<div class="input-wrapper">
	   				<%= f.text_field :password, placeholder: "Enter your password.", class: "form-control", type: "text" %><br><br>
				
	   				<%= f.text_field :password_confirmation, placeholder: "Confirm your password.", class: "form-control", type: "text" %><br><br>
	   			</div>
	   		</div>
	   	</div><!--.form-group-->
	   	<div class="form-buttons clearfix">
	   		<%= submit_tag "Update Your Password", :class => "btn btn-block btn-success pull-right", type: "submit" %>
	   	</div><!--.form-buttons-->
	   <% end %>
      </div><!--#pane-forgot-password.panel-body-->

    </div><!--.blur-content-->
  </div><!--.login-screen-->

  <div class="bg-blur dark">
    <div class="overlay"></div><!--.overlay-->
  </div><!--.bg-blur-->

  <svg version="1.1" xmlns='http://www.w3.org/2000/svg'>
    <filter id='blur'>
      <feGaussianBlur stdDeviation='7' />
    </filter>
  </svg>

  <!-- BEGIN INITIALIZATION-->
  <script>
  $(document).ready(function () {
    Pleasure.init();
    Layout.init();
    UserPages.login();
  });
  </script>
  <!-- END INITIALIZATION-->
</body>




