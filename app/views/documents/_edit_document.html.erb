<div class="modal fade" id="<%= document.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <%= form_for [@object, document], html: {:multipart => true, id: "document-form" }, remote: true do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <br>
          <i class="icon-credit-card icon-7x"></i>
          <h4 id="myModalLabel" class="semi-bold">Edit "<span class="bold"><%= document.name %></span>"" position</h4>
        </div>
        <hr class="no-margin"/>
        <div class="modal-body">

          <div class="row example-row">
            <div class="col-md-12">Document File</div>
            <div class="col-md-12">
              <div class="inputer">
                <div class="input-wrapper">
                  <%= f.file_field :file %>
                </div>
              </div>
            </div>
          </div>

           <div class="row example-row">
            <div class="col-md-12">Document Name</div>
            <div class="col-md-12">
              <div class="inputer">
                <div class="input-wrapper">
                  <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="row example-row">
            <div class="col-md-12">Document Description</div>
            <div class="col-md-12">
              <div class="inputer">
                <div class="input-wrapper">
                  <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

        </div>
        <div class="modal-footer bg-primary">
          <%= f.submit "Save", class: "btn btn-white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
