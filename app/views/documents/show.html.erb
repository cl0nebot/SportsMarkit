<div class="content">
  <div class="page-header full-content bg-blue mb0">
    <div class="row">
      <div class="col-sm-6">
        <h1>Admin <small>Documents</small></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="/"><i class="ion-home"></i></a></li>
          <li><a href="<%= users_path %>" class="active">all users</a></li>
        </ol>
      </div>
    </div>
  </div>

  <div class="pt60">
    <div class="row">
      <div class="col-lg-6 col-sm-offset-3">
        <div class="panel box-shadow-ccc">
          <div class="panel-heading">
            <div class="panel-title">
              <h4 class="semi-bold">Show Document</h4>
            </div>
          </div>
          <div class="panel-body pb40">
            <div class="">
              <table class="table table-hover table-condensed">
                <tr>
                  <th style="width:50%" class="semi-bold h6 text-muted">Name</th>
                  <th><%= @document.try(:name) %></th>
                </tr>
                <tr>
                  <th style="width:30%" class="semi-bold h6 text-muted">Description</th>
                  <th><%= @document.try(:description) %></th>
                </tr>
                <tr>
                  <th style="width:30%" class="semi-bold h6 text-muted">File</th>
                  <th><%= @document.try(:file) %></th>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
