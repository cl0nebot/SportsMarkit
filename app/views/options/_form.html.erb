<div id='option-<%= o.fake_id %>' style='margin-bottom: 20px; display: block; float: left; width: 100%;'>
  <%= form_for [form.formable, form, o], remote: true do |f| %>
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)%>
    <div class="col-md-12">
      <div class="row example-row">
        <div class="col-md-12">Name </div><!--.col-md-3-->
        <div class="col-md-12">
          <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :name, class: "form-control", placeholder: ""  %>
            </div>
          </div>
        </div><!--.col-md-9-->
      </div>
      <div class="row example-row">
        <div class="col-md-12">Description </div><!--.col-md-3-->
        <div class="col-md-12">
          <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :description, class: "form-control", placeholder: ""  %>
            </div>
          </div>
        </div><!--.col-md-9-->
      </div>
      <div class="row example-row">
        <div class="col-md-12">Price </div><!--.col-md-3-->
        <div class="col-md-12">
          <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :price, class: "form-control", placeholder: ""  %>
            </div>
          </div>
        </div><!--.col-md-9-->
      </div><!--.row-->
    </div>
    <div class="col-md-12">
      <%= f.hidden_field :object, value: form.object %>
      <% if o.persisted? %>
        <button class="btn btn-large btn-blue submit-form"> Update </button>
        <button class="btn btn-large btn-blue">
          <%= link_to "Remove", team_form_option_path(form.formable, form, o), method: :delete, remote: :true %>
        </button>
      <% else %>
        <button class="btn btn-large btn-blue submit-form"> Create </button>
        <%= f.hidden_field :fake_id %>
        <button class="btn btn-large btn-blue remove-form">Remove</button>
      <% end %>
    </div>
  <% end %>
</div>