<%= form_for current_user.roles.build, html: {method: :post, remote: true } do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :roleable_id, value: @object.id %>
  <%= f.hidden_field :roleable_type, value: @object.class.to_s %>
  <%= hidden_field_tag :join,"", value: true %>

  <%= button_tag class: "pull-right btn btn-blue-grey button-striped button-full-striped btn-ripple mr20" do %>
  	<i class="ion-plus-circled text-indigo mr5"></i> Join Team
  <% end %>

<% end %>