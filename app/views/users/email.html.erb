<div class="content">
  
  <!-- page header -->
  <div class="page-header full-content bg-blue">
    <div class="row">
      <div class="col-sm-6">
        <h1>Welcome back <small class="m-l-20 inline-block"> Email update request</small></h1>
      </div><!--.col-->
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="/"><i class="ion-home"></i></a></li>
          <li><a href="<%= teams_path %>">Teams</a></li>
          <li><a href="#" class="active">New</a></li>
        </ol>
      </div><!--.col-->
    </div><!--.row-->
  </div><!--.page-header-->

	<div class="row">
		<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-md-6 col-md-offset-3">
			<div class="panel box-shadow-ccc">
				
				<!-- panel header -->
				<div class="panel-heading">
					<div class="panel-title text-center">
						<br/>
						<h3>Please enter your email below.</h3>
					</div>
				</div>
				<!--.panel-heading-->
				
				<!-- panel body -->
				<div class="panel-body m-b-30">

					<h5 class="text-muted text-center">Your account was created using your cell phone number,<br/> we need to update your account with a valid email address. </h5>

					<br/>

					<div class="row">
						<div class="col-md-6 col-md-offset-3">
							<%= form_for @user, html: {id: 'user-edit-form'} do |f| %>
								<div class="inputer">
									<div class="input-wrapper">
										<%= f.text_field :email, type: "text", class: "form-control", placeholder: "email" %>
									</div>
								</div>

								<%= f.submit "Update Email", class: "btn btn-block btn-primary" %>
							<% end %>
						</div>
					</div>

					<br/>
							
					</div>
				</div>
				<!--.panel-body-->

			</div><!--.panel-->

			
		</div><!--.col-md-12-->
	</div><!--.row-->

</div>
<%#= @id %>
<%#= @class %>
