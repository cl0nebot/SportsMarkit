<% cache ["v1", "v1", "login_page"] do %>
  <h5 class="text-muted semi-bold text-center">LOGIN BELOW</h5>
  <hr class="hr-333 mt10"/>
  <%= form_tag sessions_path, id: 'login-form', data: { toggle: 'validator', disable: false } do |f|   %>
    <div class="form-group">
      <div class="inputer">
        <div class="input-wrapper form-group">
          <%= text_field_tag :identifier, nil, { placeholder: "Phone number or email.", class: "form-control", required: true } %>
          <div class="help-block with-errors"></div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="inputer">
        <div class="input-wrapper form-group">
          <%= password_field_tag :password, nil, { placeholder: "Password", class: "form-control", required: true } %>
          <div class="help-block with-errors"></div>
        </div>
      </div>
    </div>
    <div class="form-buttons clearfix m-t-10">
      <%= submit_tag "Login", class: "btn btn-block btn-primary pull-right" %>
    </div>
    <br/>
    <h5 class="text-muted semi-bold text-center">Or, use one-click-login</h5>
    <div class="social-accounts">
      <div class="btn-group-justified">
        <%=link_to "/auth/facebook", class: "btn-block btn btn-white" do %>
          <span class="text-primary semi-bold">
            <i class="fa fa-facebook"></i>
            Facebook
          </span>
        <% end %>
      </div>
    </div>
    <ul class="extra-links mt5">
      <li>
        <%= link_to new_password_reset_path, class:"text-muted pull-right" do %>
          <h6 class="no-margin">
            <a href="#" class="show-pane-forgot-password">Forgot your password ?</a>
          </h6>
        <% end %>
      </li>
      <li>
        <a href="#" class="bold show-pane-create-account ls1"><u>Create a new account</u></a>
      </li>
    </ul>
  <% end %>
<% end %>