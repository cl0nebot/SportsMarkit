<h5 class="text-muted semi-bold text-center">LOGIN BELOW</h5>
<hr class="hr-333 mt10"/>
<%= form_for User.new, html: { class: "form-horizontal parsley-validate", id: 'signup-form', data: { toggle: 'validator', disable: false }} do |f|   %>
  <div class="form-group">
    <div class="inputer">
      <div class="input-wrapper form-group">
        <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %>
        <div class="help-block with-errors"></div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="inputer">
      <div class="input-wrapper form-group">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>
        <div class="help-block with-errors"></div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="inputer">
      <div class="input-wrapper form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "Email address", required: true, "data-email" => true %>
        <div class="help-block with-errors"></div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="inputer">
      <div class="input-wrapper form-group">
        <%= f.text_field :mobile_phone_number, class: "form-control", placeholder: "Mobile Phone Number ex. 5556667777", id: "mobile_phone_number", required: true, "data-phone" => true %>
        <div class="help-block with-errors"></div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="inputer">
      <div class="input-wrapper form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true, minlength: 6 %>
        <div class="help-block with-errors"></div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label><input type="checkbox" name="remember" value="1"> I have read and agree to the term of use.</label>
  </div>
  <div class="form-buttons clearfix">
    <%= f.submit "Create Account", class: "btn btn-block btn-primary pull-right" %>
  </div>
  <div class="form-buttons clearfix">
    <ul class="extra-links mt5">
      <li>
        <a href="#" class="bold show-pane-login ls1"><u>I have an Account</u></a>
      </li>
    </ul>
  </div>
<% end %>