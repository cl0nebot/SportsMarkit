<h2>Create a New Account</h2>
				
<%= form_for User.new, html: {id: 'signup-form'} do |f|   %>
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.text_field :mobile_phone_number, class: "form-control", placeholder: "Phone Number" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<label><input type="checkbox" name="remember" value="1"> I have read and agree to the term of use.</label>
	</div>
	<div class="form-buttons clearfix">
		<button type="submit" class="btn btn-white pull-left show-pane-login">Cancel</button>
		<%= f.submit "Sign Up", class: "btn btn-primary pull-right" %>
	</div><!--.form-buttons-->
<% end %>