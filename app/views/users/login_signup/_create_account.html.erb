<h2>Create a New Account</h2>
				
<%= form_for @user do |f| %>
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<div class="inputer">
			<div class="input-wrapper">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
			</div>
		</div>
	</div><!--.form-group-->
	<div class="form-group">
		<label><input type="checkbox" name="remember" value="1"> I have read and agree to the term of use.</label>
	</div>
	<div class="form-buttons clearfix">
		<button type="submit" class="btn btn-white pull-left show-pane-login">Cancel</button>
		<%= f.submit "Sign Up", class: "btn btn-success pull-right" %>
	</div><!--.form-buttons-->
<% end %>