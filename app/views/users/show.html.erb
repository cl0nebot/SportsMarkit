<style>

.sample-bg-image13:before {
  background-image: url('<%=image_path("thumbs/football-game.jpg")%>');
	}
.card-clickable {
  padding-bottom: 0;
}

.sample-member9 {
  background-image: url('http://hasslefreeliving.com/wp-content/uploads/2012/10/placeholder.gif');
}
</style>


<div class="content">

	<div class="page-header full-content parallax" style="height: 600px; overflow: hidden">
		<div class="parallax-bg" style="background: url('http://svite-league-apps-content.s3.amazonaws.com/bgimages/sports-wave.jpg') 50% 50%; background-size: cover; width: 100%; height: 100%; position: absolute; left: 0; top: 0;">
		</div>

		<div class="profile-info">
			<div class="profile-photo">
				<img src="<%= image_path(@user.avatar) %>" alt="">
			</div><!--.profile-photo-->
			<div class="profile-text light capitalize">
				<%= @user.full_name %>
				<span class="caption">
					<%= "Baltimore, Maryland" %> 
				</span>
			</div><!--.profile-text-->
		</div><!--.profile-info-->

		<div class="social-buttons">
			<%= render 'shared/fan' %>
		</div>

		<div class="row">
			<div class="col-sm-5">
				<h1>
					<i class="ion-calendar m-r-5"></i>
					Upcoming event 
					<br/>
					<small><% if @user.all_events.empty? %>
						<%= @user.next_event %>
						<% else %>
						<%= link_to @user.next_event, event_path(@user.all_events.first.friendly_id) %>
						<% end %>
					</small>
				</h1>
			</div><!--.col-->
			<div class="col-sm-6">
				<ol class="breadcrumb">
					<li><a href="/"><i class="ion-home"></i></a></li>
					<li><a href="<%= users_path %>">users</a></li>
					<li><a href="#" class="active">My Profile</a></li>
				</ol>
			</div><!--.col-->
			<div class="col-sm-1 text-right">
				<a href="<%= edit_user_path(User.first) %>" class="btn btn-floating btn-light-blue">
					<i class="ion-android-settings"></i>
				</a>
			</div>
		</div><!--.row-->

		<div class="header-tabs scrollable-tabs sticky">
			<ul class="nav nav-tabs tabs-active-text-white tabs-active-border-yellow">
				<li><a href="#teams" data-toggle="tab" class="btn-ripple">Teams</a></li>
				<li><a href="#teammates" data-toggle="tab" class="btn-ripple">Teammates</a></li>
				<li><a href="#events" data-toggle="tab" class="btn-ripple">Events</a></li>
				<li><a href="#facilities" data-toggle="tab" class="btn-ripple">Facilities</a></li>
				<li><a href="#media" data-toggle="tab" class="btn-ripple">Media</a></li>
			</ul>
		</div>
	</div><!--.page-header-->

	<div class="row user-profile">
			<div class="col-md-12">
				<div class="tab-content without-border">
					
					<!-- teams -->
					<div id="teams" class="tab-pane">

						<div class="row masonry">
							<% @teams.each do |team| %>
								<div class="col-md-4">
									<div class="card card-meal card-meal-green card-square card-shadow">
									<div class="card-heading">
										<h3 class="card-title">
											<%= link_to team.name, "teams/#{team.slug}" %>
										</h3>
										<div class="card-subhead">
											<%= team.sport %>
										</div><!--.card-subhead-->
									</div><!--.card-heading-->
									<div class="card-body">
										<div class="image">
											<a href="#"><%= image_tag Sport.find_by_sport(team.sport).try(:default_photo)%></a>
										</div><!--.image-->
									</div><!--.card-body-->
									</div><!--.card-->
								</div><!--.col-md-4-->
							<% end %>
						</div><!--.row-->

					</div>
					<!--#teams.tab-pane-->

					<!-- people -->
					<div id="teammates" class="tab-pane">
						<div class="row">
	                       
	                       <% @teammates.each do |teammate| %>

	                       <div class="col-md-4">
								<div class="card card-user card-clickable card-clickable-over-content">
									<div class="card-heading heading-full">
										<div class="user-image sample-member9"></div>

										<div class="clickable-button">
											<div class="layer bg-green"></div>
											<a class="btn btn-floating btn-green initial-position floating-open"><i class="ion-android-share-alt"></i></a>
										</div>

										<div class="layered-content bg-green">
											<div class="overflow-content">
												<h4>Follow <%= teammate.first_name %></h4>
												<ul class="inline-list social-list borderless">
													<li><a class="btn btn-facebook btn-ripple"><i class="ion-social-facebook"></i></a></li>
													<li><a class="btn btn-twitter btn-ripple"><i class="ion-social-twitter"></i></a></li>
													<li><a class="btn btn-googleplus btn-ripple"><i class="ion-social-googleplus"></i></a></li>
												</ul>
											</div><!--.overflow-content-->
											<div class="clickable-close-button">
												<a class="btn btn-floating initial-position floating-close"><i class="ion-android-close"></i></a>
											</div>
										</div>

									</div><!--.card-heading-->

									<div class="card-body">
										<h3 class="card-title">
											<a href="#" class="capitalize">
											<%= link_to teammate.full_name, user_path(teammate) %>
											</a>
										</h3>
										<div class="subhead mb0">
											Shared Teams:
											<% teammate.teams.each_with_index do |team, i| %>
												<% count = i + 1 %>
												<%= link_to team.name, team_path(team) %><%= count == teammate.teams.count ? "" : ","%>
											<% end %>
										</div>
									</div><!--.card-body-->

								</div><!--.card-->
							</div><!--.col-md-4-->

							<% end %>

						</div><!--.row-->
					</div>
					<!--#people.tab-pane-->

					<!-- events -->
					<div id="events" class="tab-pane">

						<div class="row">
							<% @user.attendances.each do |att| %>

								<div class="col-md-6">
								<div class="card card-event card-clickable">

									<div class="card-heading bg-image sample-bg-image13" style="">
									</div><!--.card-heading-->

									<div class="card-body">
										<div class="calendar">
											<div class="month">November</div>
											<div class="date">27</div>
										</div><!--.calendar-->
										<h4 style="margin-bottom: 0;"><%= att.event.title %></h4>
										<p>
											<%= att.event.event_type %>
										</p>
										<h5 class="h6 text-primary bold">
											<%= format(att.event.starts_at, 4) %>
											<%= format(att.event.starts_at, 8) %>
											- 
											<%= format(att.event.ends_at, 4) %>
											<%= format(att.event.ends_at, 8) %>
										</h5>
									</div><!--.card-body-->

									<div class="clickable-button">
										<div class="layer bg-primary"></div>
										<a class="btn btn-floating btn-primary initial-position floating-open"><i class="ion-android-more-horizontal"></i></a>
									</div>

									<div class="layered-content bg-red">
										<div class="overflow-content">
											<h4>How Many People Are Attending?</h4>
											<%= att.event.people_that_are_going.count %>
										</div><!--.overflow-content-->
										<div class="clickable-close-button">
											<a class="btn btn-floating initial-position floating-close"><i class="ion-android-close"></i></a>
										</div>
									</div>

								</div><!--.card-->
								</div><!--.col-md-6-->

							<% end %>

						</div>

					</div>
					<!--#events.tab-pane-->

					<!-- facilities -->
					<div id="facilities" class="tab-pane">
						<div class="row">
							<div class="col-md-3">
								<ul class="nav nav-tabs borderless vertical">
									<li class="active"><a href="#about_overview" data-toggle="tab">Overview</a></li>
									<li><a href="#about_timeline" data-toggle="tab">Timeline</a></li>
								</ul>
							</div><!--.col-md-3-->
							<div class="col-md-9">
								<div class="tab-content">

									<div class="tab-pane active" id="about_overview">
										<div class="legend">Contact Information</div>
										<div class="row">
											<div class="col-md-3">Mobile Phones</div><!--.col-md-3-->
											<div class="col-md-9">+1-202-555-0173</div><!--.col-md-9-->
										</div><!--.row-->
										<div class="row">
											<div class="col-md-3">Address</div><!--.col-md-3-->
											<div class="col-md-9">2002 Holcombe Boulevard<br>Houston, TX 77030 </div><!--.col-md-9-->
										</div><!--.row-->
										<div class="row">
											<div class="col-md-3">Website</div><!--.col-md-3-->
											<div class="col-md-9">http://www.teamfox.co</div><!--.col-md-9-->
										</div><!--.row-->
										<div class="row">
											<div class="col-md-3">Email</div><!--.col-md-3-->
											<div class="col-md-9"><%= @user.email %></div><!--.col-md-9-->
										</div><!--.row-->
										<div class="row">
											<div class="col-md-3">Facebook</div><!--.col-md-3-->
											<div class="col-md-9"><%= @user.profile.facebook %></div><!--.col-md-9-->
										</div><!--.row-->
										<div class="row">
											<div class="col-md-3">Twitter</div><!--.col-md-3-->
											<div class="col-md-9"><%= @user.profile.twitter %></div><!--.col-md-9-->
										</div><!--.row-->

										<div class="legend">Basic Information</div>
										<div class="row">
											<div class="col-md-3">Birth Date</div><!--.col-md-3-->
											<div class="col-md-9">July 17</div><!--.col-md-9-->
										</div><!--.row-->
										<div class="row">
											<div class="col-md-3">Birth Year</div><!--.col-md-3-->
											<div class="col-md-9">2014</div><!--.col-md-9-->
										</div><!--.row-->
										<div class="row">
											<div class="col-md-3">Gender</div><!--.col-md-3-->
											<div class="col-md-9">Male</div><!--.col-md-9-->
										</div><!--.row-->
									</div><!--#about_overview.tab-pane-->

									<div class="tab-pane" id="about_timeline">
										<div class="timeline single">
											<div class="frame">
												<div class="timeline-badge">
													<i class="fa fa-headphones"></i>
												</div><!--.timeline-badge-->
												<span class="timeline-date">17 August 1999</span>
												<div class="timeline-content">
													<p>The 1999 Kocaeli earthquake occurred with a moment magnitude of 7.4 that struck northwestern Turkey on 17 August at about 3:02 a.m. local time.</p>
												</div><!--.timeline-content-->
											</div><!--.frame-->
											<div class="frame">
												<div class="timeline-badge">
													<i class="fa fa-tree"></i>
												</div><!--.timeline-badge-->
												<span class="timeline-date">December 28, 1908</span>
												<div class="timeline-content">
													The 1908 Messina earthquake and tsunami took about 123,000 lives on December 28, 1908, in Sicily and Calabria, southern Italy.
												</div><!--.timeline-content-->
											</div><!--.frame-->

											<div class="frame">
												<div class="timeline-badge">
													<i class="fa fa-tree"></i>
												</div><!--.timeline-badge-->
												<span class="timeline-date">18 April 1906</span>
												<div class="timeline-content">
													The San Francisco earthquake of 1906 struck San Francisco and the coast of Northern California at 5:12 a.m. on Wednesday, April 18, 1906.
												</div><!--.timeline-content-->
											</div><!--.frame-->

											<div class="frame">
												<div class="timeline-badge">
													<i class="fa fa-tree"></i>
												</div><!--.timeline-badge-->
												<span class="timeline-date">May, 526</span>
												<div class="timeline-content">
													The 526 Antioch earthquake hit Syria (region) and Antioch in the Byzantine Empire in 526. It struck during late May, probably between May 20â€“29, at mid-morning, killing approximately 250,000 people.
												</div><!--.timeline-content-->
											</div><!--.frame-->
										</div><!--.timeline-->

									</div><!--#about_timeline.tab-pane-->

								</div><!--.tab-content-->

							</div><!--.col-md-9-->
						</div><!--.row-->
					</div>
					<!--#facilities.tab-pane-->

					<!-- media -->
					<div id="media" class="tab-pane">

						
					</div>

					</div>
					<!--#media.tab-pane-->
				</div><!--.tab-content-->
			</div><!--.col-->
		</div><!--.row-->

	<%= render "shared/modals/boostrap_image_gallery_lightbox" %>

	<%#= render "shared/panels/new_event" %>

</div><!--.content-->

