<style>
  .sample-bg-image13:before {
    background-image: url('<%=background_url(@user) %>');
  }
  .card-clickable {
    padding-bottom: 0;
  }
  .sample-member9 {
    background-image: url('http://hasslefreeliving.com/wp-content/uploads/2012/10/placeholder.gif');
  }

  .card-friend .user-photo {
    float: left;
    width: 161px;
    height: auto;
    border-radius: 3px 0 0 3px;
  }
  .card-friend .friend-content {
    margin-left: 180px;
  }

  .card.card-meal .card-body .users {
    width: 100%;
    height: 64px;
    padding: 3px 20px;
    border-top: none;
    border-bottom: 1px solid #eee;
    overflow: hidden;
    text-align: center;
    background-color: #f5f5f5;
  }
  .timeline .frame .timeline-date {
    display: block;
    color: #337ab7;
    font-style: normal;
    font-size: 14px;
    margin: 10px 30px 0 30px;
  }
</style>
<div class="content">
  <div class="page-header full-content bg-primary mb0" style="min-height: 141px;">
    <div class="row">
      <div class="col-sm-6">
        <h1 class="capitalize semi-bold">
          <%= @user.name %>
          <small></small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="/"><i class="ion-home"></i></a></li>
          <li><a href="<%= users_path %>">users</a></li>
          <% if current_user %>
            <% if current_user.id == User.find(params[:id]).id %>
              <li><a href="#" class="active">My Profile</a></li>
            <% else %>
              <li><a href="#" class="active"><%= @user.full_name %></a></li>
            <% end %>
          <% else %>
            <li><a href="#" class="active"><%= @user.full_name %></a></li>
          <% end %>
        </ol>
      </div>
    </div>
    <div class="header-tabs scrollable-tabs sticky pr30">
      <% if @object.can_be_edited_by_user?(current_user) %>
        <%= link_to edit_user_path(@user), class: "btn btn-floating btn-red btn-ripple mt5 pull-right mr10", title: "Edit Profile", :'data-toggle' => 'tooltip', :'data-placement' => 'left' do %>
            <i class="material-icons">&#xE8B8;</i>
        <% end %>
      <% end %>
      <a href="#" class="btn btn-floating btn-cyan btn-ripple mt5 pull-right mr15" data-toggle="tooltip" data-placement="left" title="My Dashboard">
        <i class="material-icons">&#xE871;</i>
      </a>
      <%= render 'shared/view_announcement_button', object: @object %>
      <%= render 'shared/show_navigations'%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tab-content without-border">
        <!-- teams -->
        <%= render 'users/show/about_tab' %>
        <!-- teammates -->
        <%= render 'users/show/teams_tab' %>
        <!-- teammates -->
        <%= render 'users/show/teammates_tab' %>
        <!-- calendar -->
        <%= render 'users/show/calendar_tab' %>
        <!-- facilities -->
        <%= render 'users/show/facilities_tab' %>
        <!-- media -->
        <%= render 'users/show/media_tab' %>
        <!-- media -->
        <%= render 'users/show/photo_tab' %>
        <!-- following -->
        <%= render 'users/show/following_tab' %>
        <!-- fans -->
        <%= render 'users/show/fans_tab' %>
      </div>
    </div>
  </div>
  <%= render "shared/modals/boostrap_image_gallery_lightbox" %>
</div>