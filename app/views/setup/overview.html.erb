<div class="content full-content no-padding">
  
  <!-- page header -->
  <div class="page-header full-content bg-blue">
    <div class="row">
      <div class="col-sm-6">
        <h1>Welcome <small> Let's Get Started</small></h1>
      </div><!--.col-->
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="/"><i class="ion-home"></i></a></li>
          <li><a href="active">Account setup</a></li>
          <li><a href="#" class="active">New</a></li>
        </ol>
      </div><!--.col-->
    </div><!--.row-->
  </div><!--.page-header-->

<div class="row pb60">
	<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-6 col-md-6 col-sm-12">
		<div class="panel">
			
			<!-- panel header -->
			<div class="panel-heading">
				<div class="panel-title">
					<br/>
					<h3 class="text-center semi-bold fs_20">Setup your account.</h3>
					<div class="row">
						<!-- <div class="text-center">
							<%#= image_tag(@user.avatar, class: "img-circle margin-left-20 margin-right-20", height: "65", width: "65" ) %>
						</div>
						 -->
						<div class="text-center">
							<% if @user.first_name.present? %>
							<h2 class="margin-bottom-5 semi-bold"><%= @user.full_name %></h2>
							<!-- <p class="small"><%= @user.profile.location_description %></p> -->
							<% end %>
						</div>
					</div>
					</div>
				</div>
			
			<!-- panel body -->
			<div class="panel-body">
				
				<br/>
				<div id="type-list">
					<%= render 'classifications/type', user: @user %>
				</div>
			</div>
			<!--.panel-body-->

		</div><!--.panel-->

		<%= link_to user_setup_path(@user), class: "btn btn-block btn-primary" do %> 
		 	Let's Customize Your Profiles <i class="margin-left-20 ion ion-chevron-right"></i>
		<% end %>

	</div><!--.col-md-12-->
</div><!--.row-->

</div>
<%#= @id %>
<%#= @class %>
