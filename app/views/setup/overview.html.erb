<body class="bg-login" style="background: url(http://cdn.sklz.com.s3.amazonaws.com/wp-content/uploads/2015/07/MiniBands_Act2_s.jpg); background-size: cover;">
  <div class="bg-overlay"></div>
    <div class="container pt60">
	  	<div class="row">

			  <div class="col-lg-4 pt60">
			  	<br/>
			  	<h4 class="text-center h4 bold no-margin text-white">
		      	<% if @user.first_name.present? %>
							<%= @user.full_name %>
							<!-- <p class="small"><%= @user.profile.location_description %></p> -->
						<% end %>
					</h4>
		      <p class="text-white text-center no-margin small"><strong class="text-primary">Step 1:</strong> Select a Profile</p>
			  </div>
			  <div class="col-lg-4">

	  			<div class="panel panel-transparent">
			  		<h4 class="logo mt20 logo text-center text-white fs_28">
				      <%= image_tag("icons/flag.png", height: "20", width: "auto", class: "margin-right-5", style: "margin-top: -3px;") %>
				      <span class="text-white">SportsMarkit</span>
				    </h4>
			    </div>
		        
	  	
			    <div class="panel b-rad-4">
						<div id="type-list" class="bg-light-grey b-rad-4-top">
							<%= render 'classifications/type', user: @user %>
						</div>
						<div class="padding-20 b-rad-4-bottom" style="background: #fff;">
					    <%= link_to user_setup_path(@user), class: "btn btn-block btn-primary" do %> 
					 			Next Step <span class="ml10 fs_14 ion ion-chevron-right"></span>
							<% end %>
			      </div>
			    </div>
			  </div>
	    </div>
	  </div>
	</div>
</body>

