<% children.each do |child| %>
  <li class="has-action-left has-action-right" id="child_<%= child.id %>">
    <a href="#" class="visible">
      <div class="list-action-left">
        <%= link_to user_remove_child_path(user_id: @user.id, child_id: child.id ) , class: 'btn btn-floating btn-orange initial-position floating-open', remote: true, method: :delete do %>
          <i class="ion-person-stalker"></i>
        <% end %>
      </div>
      <div class="list-content padding-left-30">
									<span class="title">
										<%= child.full_name %>
									</span>
									<span class="caption">
										<i class="ion-location"></i>
										<% if child.age.present? %>
                    <%= child.age %>
					<% end %>
					<% if child.profile.city.present? %>
										, <%= child.profile.residence %>
										<% end %> 
										<% if child.schools.present? %>
										, <%= child.schools.first.name %>
										
										<% end %>
										
										<% if child.teammates.count > 0 %>
										,<%= pluralize child.teammates.count, "Teammate"%> 
										<% end %>
									</span>
      </div>
      <div class="list-action-right">
		  <% unless child.has_confirmed_parent?(@user) %>
        <span class="top">Pending</span>
		<% else %>
        <i class="ion-android-checkmark-circle bottom"></i>
		<% end %>
      </div>
    </a>
  </li>
<% end %>