<%= form_for @user, url: athlete_setup_path(@user) do |f| %>
	<% if @user.is_athlete? %>	
		<div class="panel-body margin-top-10">
	    	<div class="row">
				<div class="col-lg-10 col-lg-offset-1">



					<div class="row">
						<div class="pull-left">
							<%= image_tag("http://pingendo.github.io/pingendo-bootstrap/assets/user_placeholder.png", class: "img-circle margin-left-20 margin-right-20", height: "65", width: "65" ) %>
						</div>
						<div class="pull-left">
							<h4 class="margin-bottom-5">First Name, Last Name</h4>
							<p class="small">My Athlete Profile</p>
						</div>
					</div>

					<div class="note note-warning note-left-striped">
						<h4>Adding teams to your athlete profile.</h4>
						<p class="small text-grey">
							Use the search box below to find your teams. Once added, the team administrator will be notified of your request to join that team. In the meantime, your status will be pending.
						</p>
					</div>

					<hr class="no-margin"/>
					<br/>
			
					<!-- <h5 class="semi-bold text-orange ">
						<span class="bold margin-right-10">
							1.	
						</span>
						Add teams to your athletic profile
					</h5> -->

					<div class="row well padding-bottom-0">
						<div class="col-lg-4 col-md-6 col-sm-12">
							<h3 class="bold text-primary margin-top-10">
								<i class="ion ion-search margin-right-5"></i> Find your teams
							</h3>
						</div><!--.col-md-3-->
						<div class="col-lg-8 col-md-6 col-sm-12">
							<div class="inputer">
								<!-- isotope filtering and typeahead-->
								<textarea type="text" class="fs_30 lh_55 quicksearch typeahead typeahead-teams form-control" rows="1" placeholder="start typing..."></textarea>
							</div>
						</div><!--.col-md-9-->
					</div><!--.row-->
					<hr class="margin-top-10"/>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-10 col-lg-offset-1">

					<h5 class="bold text-black">Your Teams
		   			<span class="small semi-bold text-orange">(<%=@user.relationships.where(participant: true).count %>)</span>
		       		</h5>

		       		<% if @user.relationships.where(participant: true).present? %>
	        
		       			<% @user.relationships.where(participant: true).each do |relationship| %>
			   				<div class="panel-body without-padding">
								<ul class="list-material">
									<li class="has-action-left has-action-right">
										<a href="#" class="visible">
											<div class="list-action-left">
												<a class="btn btn-floating btn-orange btn-ripple">
													<i class="ion-android-close"></i>
												</a>
											</div>
											<div class="list-content padding-left-30">
												<span class="title">
													<%= relationship.team.name %>
												</span>
												<span class="caption">
													<i class="ion-location"></i>
													[city, state], 
													[Schoo/League Name], 
													[# of team members] 
												</span>
											</div>
											<div class="list-action-right">
												<span class="top">Pending</span>
												<i class="ion-android-checkmark-circle bottom"></i>
											</div>
										</a>
									</li>
								</ul>
							</div><!--.panel-body-->

						<% end %>

					<% else %>

						You are currently not a member of any teams. Let's get you started. Find your teams below.

					<% end %>
				
				</div>

		    </div>
		</div>
	

	<div class="bg-muted padding-top-40 padding-right-40 padding-left-40" style="background: #F7F7F7;">

		<div class="row">
			<div class="col-md-4 item" data-category="">
				<div class="card card-meal card-meal-blue card-square card-shadow" style="min-height: 400px;">
					<div class="card-heading">
						<h3 class="card-title">[High School Name]</h3>
						<div class="card-subhead">
							<a href="#">
								<i class="glyphicon glyphicon-map-marker"></i>
							 	[City, State]
							</a>
						</div><!--.card-subhead-->
					</div><!--.card-heading-->
					<div class="card-body">
						<div class="image">
							<a href="#">
								<!-- placeholder image for school image -->
								<%= image_tag("placeholders/classroom.jpg") %>
							</a>
						</div><!--.image-->
					</div><!--.card-body-->
					<div class="card-footer">
						<a href="#" class="btn btn-block btn-primary">
							<span class="text-white">Add School</a>
						</a>
					</div><!--.card-footer-->
				</div><!--.card-->
			</div><!--.col-md-4-->
		</div>
	</div><!--.row-->
	<% end %>
<% end %>

<script type="text/javascript">
	// typeahead for athletes
</script>			