<% unless Relationship.where(team_id: team.id, user_id: current_user.id, head: true).present? %>
	<%= form_for Relationship.new, url: user_add_coach_team_at_setup_path(current_user), html: {data: {remote: true}} do |f| %>
	  <%= f.hidden_field :team_id, value: team.id %>
	  <%= f.hidden_field :user_id, value: current_user.id %>
	  <%= f.hidden_field :head, value: true %>
	  <%= f.submit "Add Team", class: "btn btn-block btn-primary" %>
	<% end %>
<% else %>
	<%= form_for Relationship.new, url: user_add_coach_team_at_setup_path(current_user), html: {data: {remote: true}} do |f| %>
	  <%= f.submit "Claimed", class: "btn btn-block btn", disabled: true %>
	<% end %>
<% end %>