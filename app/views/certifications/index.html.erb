
<div class="page-content condensed">
  <div class="content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="grid simple no-border">
          <div class="grid-body">
            <div class="clearfix">
				<h4 class="semi-bold">Create a New Certification</h4>
				<%= form_for @certification, html: {id: 'certification-form', data: {remote: true}} do |f| %>
					<div class="row">
						<div class="col-md-6">
							<%= f.text_field :name, class: "col-md-12", placeholder: "" %>
						</div>
						<div class="col-md-6">
							<%= f.text_field :issuer, class: "col-md-12", placeholder: "" %>
						</div>
						<%= f.fields_for :certification_badges, @certification_badges do |s| %>

			            <div class="row example-row">
			              <div class="col-md-3">Photo</div><!--.col-md-3-->
			              <div class="col-md-9">

			                <div class="fileinput fileinput-new" data-provides="fileinput">
			                  <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
			                    <img data-src="<%= image_path("placeholders/sport.jpg") %>" src="<%= image_path("placeholders/sport.jpg") %>" alt="..." style="height: 100%; width: 100%;">
			                  </div>
			                  <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
			                  <div>
			                    <span class="btn btn-default btn-file">
			                      <span class="fileinput-new">Select image</span>
			                      <span class="fileinput-exists">Change</span>
			                      <%= s.file_field :badge, type: "file"%>
			                    </span>
			                    <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
			                  </div>
			                </div>
			            <% end %>
						
						<div class="col-md-2">
							<%= f.submit class: "btn btn-white" %>
						</div>
					</div>
				<% end %>
				<br/>
				<br/>
				<br/>
      			<table id="certification-list" class="table table-hover table-condensed" id="example">
	                <thead>
	                  <tr>
	                    <th style="width:25%" class="gf_muli">Name</th>
	                    <th style="width:15%" class="gf_muli">Issuer</th>
						<th style="width:15%" class="gf_muli">Badge</th>
	                    <th style="width:20%" class="gf_muli"># Certified </th>
	                    <th style="width:22%" class="gf_muli">Actions</th>
	                  </tr>
	                </thead>
	                <tbody>
		                <%= render @certifications %>
	                </tbody>
	              </table>
	            </div>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>

