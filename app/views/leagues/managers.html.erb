<div class="content">
	<div class="page-header full-content bg-blue mb0">
	  <div class="row">
	    <div class="col-sm-6">
	      <h1>Admin <small>league managers</small></h1>
	    </div><!--.col-->
	    <div class="col-sm-6">
	      <ol class="breadcrumb">
	        <li><a href="/"><i class="ion-home"></i></a></li>
	        <li><a href="<%= users_path %>" class="active">league managers</a></li>
	      </ol>
	    </div><!--.col-->
	  </div><!--.row-->
	</div><!--.page-header-->

	   
	  	
	<div class="pt60">
		<div class="row">
			<div class="col-lg-12">
				<div class="panel box-shadow-ccc">
					<div class="panel-heading">
						<div class="panel-title">
							<h4 class="semi-bold">All League Managers</h4>
						</div>
					</div>
					<div class="panel-body pb40">
						<div class="">
							<table id="facility-type-list" class="table table-hover table-condensed" id="example">
					          <thead>
					            <tr>
					              <th style="width:%" class="semi-bold h6 text-muted">Name</th>
								  <th style="width:%" class="semi-bold h6 text-muted">League</th>
					              <th style="width:15%" class="semi-bold h6 text-muted">Phone</th>
					              <th style="width:%" class="semi-bold h6 text-muted">Email</th>
					              <th style="width:%" class="semi-bold h6 text-muted">Timestamp</th>
					            </tr>
					          </thead>
					          <tbody>
					          	<% @league_managers.each do |lm| %>
						            <tr>
						            	<td><%= lm.user.full_name %></td>
							            <td><%= lm.roleable.name %></td>
							            <td><%= number_to_phone(lm.user.mobile_phone_number) %></td>
							            <td><%= lm.user.email %></td>
							            <td><%= time_ago_in_words(lm.created_at) %> ago</td>
							        </tr>
						        <% end %>
					          </tbody>
				        	</table>
				      	</div>
				      </div>
				    </div>
				</div>
			</div>
		</div>
	</div>
</div>








