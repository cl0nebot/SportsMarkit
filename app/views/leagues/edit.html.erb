<div class="content">
	<div class="page-header full-content bg-primary" style="min-height: 141px;">
		<div class="row">
			<div class="col-sm-6">
				<h1 class="capitalize">
					<%= @league.name %>
					<small></small>
				</h1>
			</div><!--.col-->
			<div class="col-sm-6">
				<ol class="breadcrumb">
					<li><a href="/"><i class="ion-home"></i></a></li>
					<li><a href="<%= leagues_path %>">leagues</a></li>
					<li><a href="<%= league_path %>"><%= @league.name %></a></li>
					<li><a href="#" class="active">Edit</a></li>
				</ol>
			</div><!--.col-->
		</div><!--.row-->

		<div class="header-tabs scrollable-tabs sticky">
			<ul class="nav nav-tabs tabs-active-text-white tabs-active-border-yellow">
				<li class="active"><a href="#general" data-toggle="tab">General</a></li>
				<li><a href="#media" data-toggle="tab">Media Uploads</a></li>
			</ul>
		</div>
	</div><!--.page-header-->

	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
			<div class="panel box-shadow-ccc">
				<div class="panel-body no-padding form-layout">

					<div class="tab-content with-panel">
						<div class="tab-pane active text-style" id="general">

							<div class="panel-header">
								<h4 class="text-right semi-bold text-primary">General</h4>
							</div>
							<hr class="margin-top-0"/>
							
							<%= form_for @league do |f| %>
							
							<div class="panel-body">
								<div class="row">
									<div class="col-md-8 col-md-offset-2 col-sm-12">
										<div class="row example-row">
											<div class="col-md-12">Name</div><!--.col-md-3-->
											<div class="col-md-12">
												<div class="inputer">
													<div class="input-wrapper">
														<%= f.text_field :name, type: "text", class: "form-control", placeholder: "" %>
													</div>
												</div>
											</div><!--.col-md-9-->
										</div><!--.row-->

										<div class="row example-row">
											<div class="col-md-12">Sport</div><!--.col-md-3-->
											<div class="col-md-12 margin-top-10">
												<div class="inputer">
													<%= f.collection_select :sport_ids, Sport.all, :id, :sport, {:selected => ""}, {:multiple => true, "data-live-search" =>  true, "data-width"=> "100%", class: "selecter bg-white margin-bottom-0" } %>

												</div>
											</div><!--.col-md-9-->
										</div><!--.row-->

										<div class="row example-row">
											<div class="col-md-12">Description</div><!--.col-md-3-->
											<div class="col-md-12">
												<div class="inputer">
													<div class="input-wrapper">
														<%= f.text_area :description, type: "text", rows: "1", class: "form-control", placeholder: "" %>
													</div>
												</div>
											</div><!--.col-md-9-->
										</div><!--.row-->

										<div class="row">
											<div class="col-md-8">
												<div class="row example-row">
													<div class="col-md-12">City</div><!--.col-md-3-->
													<div class="col-md-12">
														<div class="inputer">
															<div class="input-wrapper">
																<input class="form-control" placeholder="City"/>

															</div>
														</div>
													</div><!--.col-md-9-->
												</div><!--.row-->
											</div>

											<div class="col-md-4">
												<div class="row example-row">
													<div class="col-md-12">State</div><!--.col-md-3-->
													<div class="col-md-12">
														<div class="inputer">
															<div class="input-wrapper">
																<%= f.text_field :state, type: "text", class: "form-control", placeholder: "" %>
															</div>
														</div>
													</div><!--.col-md-9-->
												</div><!--.row-->
											</div>
										</div>
									</div>
								</div><!--.panel-body-->
							</div>

						</div><!--tab-pane-->

		              	<div class="tab-pane text-style" id="media">
		                  	<div class="panel-header">
								<h4 class="text-right semi-bold text-primary">General</h4>
							</div>
							<hr class="margin-top-0"/>
							<div class="panel-body">
							<div class="row">
								<div class="col-md-8 col-md-offset-2 col-sm-12">
									<%= render 'shared/edit_media'%>
								</div>
							</div>
						</div><!--.tab-pane-->

					</div><!--.tab-content-->
				</div>
				<div class="panel-footer form-layout">
					<br/>
					<p class="text-right">
						<p class="text-right">
							<%= f.submit "Update", class: "btn btn-primary btn-ripple" %>
						</p>
					</p>
				</div><!--.panel-body-->
				<% end %>
			</div><!--.panel-->
		</div><!--.col-md-12-->
	</div><!--.row-->
</div>
<!--.content-->
                        

<%= render 'shared/picture_modal' %>

                            



