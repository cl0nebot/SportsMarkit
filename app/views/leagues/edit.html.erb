<div class="content">
	<div class="page-header full-content bg-primary" style="min-height: 141px;">
		<div class="row">
			<div class="col-sm-6">
				<h1 class="capitalize">
					<%= @league.name %>
					<small></small>
				</h1>
			</div><!--.col-->
			<div class="col-sm-6">
				<ol class="breadcrumb">
					<li><a href="/"><i class="ion-home"></i></a></li>
					<li><a href="<%= leagues_path %>">leagues</a></li>
					<li><a href="<%= league_path %>"><%= @league.name %></a></li>
					<li><a href="#" class="active">Edit</a></li>
				</ol>
			</div><!--.col-->
		</div><!--.row-->

		<div class="header-tabs scrollable-tabs sticky">
			<ul class="nav nav-tabs tabs-active-text-white tabs-active-border-yellow">
				<li class="active"><a href="#general" data-toggle="tab">General</a></li>
				<li><a href="#tab2" data-toggle="tab">Tabs [2]</a></li>
				<li><a href="#tab3" data-toggle="tab">Tabs [3]</a></li>
			</ul>
		</div>
	</div><!--.page-header-->

	<div class="row">
		<div class="col-md-12">
			<div class="panel">
				<div class="panel-body">

					<div class="tab-content with-panel">
						<div class="tab-pane active text-style" id="general">

								<%= form_for @league do |f| %>
								
								<%= f.text_field :name, type: "text", class: "form-control", placeholder: ""%><br>
								<%= f.text_field :sport, type: "text", class: "form-control", placeholder: "" %><br>
								<%= f.text_field :state, type: "text", class: "form-control", placeholder: "" %><br>
								<%= f.text_area :description, type: "text", class: "form-control", placeholder: "", row: "6" %><br>
								<%= f.submit "Awesome. Let's update your league!", class: "btn btn-blue btn-lg btn-block btn-ripple" %>
								
								
								<% end %>

						</div><!--tab-pane-->

						<div class="tab-pane text-style" id="tab2">
							
								put some more stuff here

						</div><!--tab-pane-->

						<div class="tab-pane text-style" id="tab3">

								finish it up here, or nah...?

						</div><!--.tab-pane-->
					</div><!--.tab-content-->

				</div><!--.panel-body-->
			</div><!--.panel-->
		</div><!--.col-md-12-->
	</div><!--.row-->
</div>
<!--.content-->
                        



                            



