<%= link_to school_path(school) do %>
	<div class="col-md-6 col-lg-3 col-sm-12 element-item">
	    <div class="card card-user card-clickable card-clickable-over-content">
	      <div class="card-heading heading-full">
			  <%#= image_tag school.main_photo, size: "428x150" %>
	        <div class="user-image sample-member9" style="background: url(<%= image_path("thumbs/school.jpg")%>);"></div>

	        <%= link_to edit_school_path(school) do %>
		        <div class="clickable-button">
		          <a class="btn btn-floating btn-orange initial-position floating-open"><i class="ion-gear-b"></i></a>
		        </div>
		    <% end %>

	      </div><!--.card-heading-->

	      <div class="card-body">
	        <p class="pull-right pt10">
          	<% if current_user %>
	  		  		<% if current_user.admin? %>
	  		    		<%= link_to new_school_team_path(school), class: "btn btn-primary button-striped button-full-striped btn-ripple btn-xs" do %>
	  		    			<i class="ion-plus-circled"></i> Add Team
	  		    			<span class="ripple _22 animate"></span>
	  		    		<% end %>
	  		  		<% end %>
  		  		<% end %>
          </p>


	        <h5 class="card-title semi-bold fs_16">
		        <%= link_to school.name, school_path(school) %>
	        </h5>

	        <div class="subhead">

	          <p><span class="text-muted">
	            <i class="ion-location mr5"></i> <%= school.city %>, <%= school.state %>
	          </span>
	          <!-- <p class="text-muted no-margin">
	          	<%#= link_to school.website do %>
	          		Website
	          	<%# end %>
	          	<%#= school.phone_number %>
	          </p> -->
	         
	        </div>
	      </div><!--.card-body-->

	     <!--  <div class="card-footer">
	        <%#= link_to "Delete", school, method: :delete, data: {confirm: "Are you sure?"}, remote: true, class: "btn btn-orange btn-xs" %>
			
	      </div> --><!--.card-footer-->

	    </div><!--.card-->
  	</div><!--.col-md-4-->
<% end %>



