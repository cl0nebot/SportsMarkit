<div class="content">
  <div class="page-header full-content bg-blue">
    <div class="row">
      <div class="col-sm-6">
        <h1>New School<small></small></h1>
      </div><!--.col-->
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="/"><i class="ion-home"></i></a></li>
          <li><a href="<%= schools_path %>" >Schools</a></li>
          <li><a href="#" class="active">New</a></li>
        </ol>
      </div><!--.col-->
    </div><!--.row-->
  </div><!--.page-header-->

<div class="row">
	<div class="col-md-12">
		<div class="panel">
			<div class="panel-heading">
				<div class="panel-title"><h4>Complete the form below. </h4></div>
			</div><!--.panel-heading-->
			<div class="panel-body">

				<%= form_for School.new, html: {id: 'school-form'} do |f|   %>
	

				<div class="row example-row">
					<div class="col-md-3">Name </div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :name, type: "text", class: "form-control", placeholder: ""%>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">Classification</div><!--.col-md-3-->
					<div class="col-md-9">
						<%= f.select :classification, [ 'College', 'High School', 'Middle School'], :class => 'btn-group bootstrap-select selecter', :prompt => 'Select One' %>

						 <!-- <select class="selecter">
							<option>College</option>
							<option>High School</option>
							<option>Middle School</option>
						</select> -->
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">Abbreviation </div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :abbreviation, type: "text", class: "form-control", placeholder: "" %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">Address 1 </div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :address_1, type: "text", class: "form-control", placeholder: "" %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->


				<div class="row example-row">
					<div class="col-md-3">Address 2 </div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :address_2, type: "text", class: "form-control", placeholder: "" %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">City</div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :city, type: "text", class: "form-control", placeholder: "" %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">State</div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :state, type: "text", class: "form-control", placeholder: "" %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">Zipcode</div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :zip, type: "text", class: "form-control payment-restrict", :restrict => true %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">Zip Extention</div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :zip_ext, type: "text", class: "form-control payment-restrict", :restrict => true %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->


				<div class="row example-row">
					<div class="col-md-3">Website </div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :website, type: "text", class: "form-control", placeholder: ""  %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">Email</div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :email, type: "text", class: "form-control" %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

				<div class="row example-row">
					<div class="col-md-3">Phone</div><!--.col-md-3-->
					<div class="col-md-9">
						<div class="inputer">
							<div class="input-wrapper">
								<%= f.text_field :phone_number, type: "text", class: "form-control" %>
							</div>
						</div>
					</div><!--.col-md-9-->
				</div><!--.row-->

			</div><!--.panel-body-->
		</div><!--.panel-->
	</div><!--.col-md-12-->
</div><!--.row-->
<%= f.submit "Create School", class: "btn btn-blue" %>
<% end %>     
</div>
<%#= @id %>
<%#= @class %>







