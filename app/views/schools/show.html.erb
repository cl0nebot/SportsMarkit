<style>
  .card-friend .friend-content {
  	margin-left: 180px;
  }
	.card-friend .user-photo {
	  float: left;
	  height: 160px;
	  width: 160px;
	  border-radius: 3px 0 0 3px;
	}
</style>
<div class="content">
  <div class="page-header full-content bg-primary mb0" style="min-height: 141px;">
    <div class="row">
      <div class="col-sm-6">
        <h1 class="capitalize semi-bold">
          <%= @school.name %>
          <small></small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="/"><i class="ion-home"></i></a></li>
          <li><a href="<%= schools_path %>">Schools</a></li>
          <li><a href="<%= school_path(@school) %>"><%= @school.name %></a></li>
          <li><a href="#" class="active">Edit</a></li>
        </ol>
      </div>
    </div>

    <div class="header-tabs scrollable-tabs sticky pr30">
      <%= render 'shared/register_button' %>
      <% if @object.can_be_edited_by_user?(current_user) %>
        <%= link_to edit_school_path(@school), class: "btn btn-floating btn-red btn-ripple mt5 pull-right mr10", title: "Edit Profile", :'data-toggle' => 'tooltip', :'data-placement' => 'left' do %>
            <i class="material-icons">&#xE8B8;</i>
        <% end %>
      <% end %>
      
      <a href="/schools/<%= @object.slug %>/dashboard" class="btn btn-floating btn-cyan btn-ripple mt5 pull-right mr15" data-toggle="tooltip" data-placement="left" title="My Dashboard">
        <i class="material-icons">&#xE871;</i>
      </a>
      <%= render 'shared/view_announcement_button', object: @object %>
      <%= render 'shared/show_navigations'%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tab-content without-border">
        <%= render "schools/show/about_tab" %>
        <%= render "schools/show/teams_tab" %>
        <%= render "schools/show/people_tab" %>
        <%= render "schools/show/facilities_tab" %>
        <%= render "schools/show/calendar_tab" %>
        <%= render "schools/show/media_tab" %>
        <% if false %>
          <%= render "schools/show/following_tab" %>
        <% end %>
        <%= render "schools/show/certifications_tab"%>
        <%= render "schools/show/fans_tab" %>
      </div>
    </div>
  </div>
  <%= render "shared/modals/boostrap_image_gallery_lightbox" %>
</div>