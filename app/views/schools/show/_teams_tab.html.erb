<div id="teams" class="tab-pane pt20">
	
	<div class="row bgcolor-white box-shadow-ccc pt20 pr20 pl20 pb30">
		<div class="col-lg-2 col-md-4 col-sm-6 text-center b-r-ddd">
			<h1 class="text-indigo no-margin bold">4</h1>
			<h6 class="text-grey semi-bold no-margin ">Teams</h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 text-center b-r-ddd">
			<h1 class="text-indigo no-margin bold">47</h1>
			<h6 class="text-grey semi-bold no-margin">Student-Athletes</h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 text-center b-r-ddd">
			<h1 class="text-indigo no-margin bold">14</h1>
			<h6 class="text-grey semi-bold no-margin">Coaches</h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 text-center b-r-ddd">
			<h1 class="text-indigo no-margin bold">4</h1>
			<h6 class="text-grey semi-bold no-margin">Team Managers</h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 text-center">
			<h1 class="text-indigo no-margin bold">4</h1>
			<h6 class="text-grey semi-bold no-margin">Athletic Trainers</h6>
		</div>
		<div class="col-lg-2 col-md-4 col-sm-6 mt5">
			<div class="well bgcolor-light-grey no-margin">
				<div class="btn-group btn-block">
					<button type="button" class="btn btn-block btn-white dropdown-toggle" data-toggle="dropdown">
					Select a Team <span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<% @teams.each do |team| %>
							<li>
								<%= link_to team_path(team) do %>
					  			<%= team.name %>
					  		<% end %>
					  	</li>
						<% end %>
					</ul>
				</div><!--.btn-group-->
			</div>
		</div>
	</div>

	<hr/>

	<div class="row">
		<div class="col-lg-12">
		<div class="row teams">
			<%= render 'shared/team_rosters' %>
		</div>
	</div>
</div>



