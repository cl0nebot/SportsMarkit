			</div><!--.col-->
			<div class="col-sm-6">
				<ol class="breadcrumb">
					<li><a href="/"><i class="ion-home"></i></a></li>
					<li><a href="#" class="active">All schools</a></li>
				</ol>
			</div><!--.col-->
			<div class="col-sm-1 text-right">
				<a class="btn btn-floating btn-pink" data-toggle="modal" data-target="#panel-new-school">
					<i class="ion-android-add"></i>
				</a>
			</div>
		</div><!--.row-->
	</div><!--.page-header-->

	<div class="page-header full-content box-shadow-ccc"  style="background: #fff;">
    <div class="row">
      <div clas="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12 box-shadow-ccc"  style="background: #fff;">
              <div class="padding-bottom-0">
                <div class="inputer">
                  <!-- isotope filtering and typeahead-->
                  <input type="text" class=" fs_20 lh_40 quicksearch-schools typeahead typeahead-schools form-control" rows="1" placeholder="Find a user...">
                </div>
              </div>
            </div><!--.col-md-9-->
          </div><!--.row-->
        </div>
      </div>
    </div>
  </div>

	  <div class="bg-muted" style="background: #F7F7F7;">
	    
	    <div class="row schools">
	    	<div class="col-lg-10 col-lg-offset-1">
	    		<%= render @schools %>	
	    	</div>
	    </div>
	</div>
	      
</div><!--.row-->


<script type="text/javascript">
	
	// QUICKSEARCH USERS

	$( function() {
	  // quick search regex
	  var qsRegex;
	  
	  // init Isotope
	  var $grid = $('.schools').isotope({
	    itemSelector: '.element-item',
	    layoutMode: 'fitRows',
	    filter: function() {
	      return qsRegex ? $(this).text().match( qsRegex ) : true;
	    }
	  });

	  // use value of search field to filter
	  var $quicksearch = $('.quicksearch-schools').keyup( debounce( function() {
	    qsRegex = new RegExp( $quicksearch.val(), 'gi' );
	    $grid.isotope();
	  }, 200 ) );

	});

	// debounce so filtering doesn't happen every millisecond
	function debounce( fn, threshold ) {
	  var timeout;
	  return function debounced() {
	    if ( timeout ) {
	      clearTimeout( timeout );
	    }
	    function delayed() {
	      fn();
	      timeout = null;
	    }
	    timeout = setTimeout( delayed, threshold || 100 );
	  }
	}

</script>
	
